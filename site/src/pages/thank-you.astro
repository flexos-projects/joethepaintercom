---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/ui/Button.astro';

const meta = {
  title: 'Thank You | Joe the Painter',
  description: 'Your Free Consultation Request has been received. Joe will contact you within 1 business day to discuss your project and schedule your consultation.',
  robots: 'noindex, nofollow', // Prevent indexing of thank you page
};
---

<BaseLayout {...meta}>
  <main class="container mx-auto px-4 py-16 md:py-24 min-h-[calc(100vh-theme(spacing.24)*2)] flex items-center justify-center">
    <section class="max-w-3xl text-center bg-surface rounded-lg shadow-lg p-8 md:p-12">
      <div class="text-success text-6xl md:text-7xl mb-6" aria-hidden="true">âœ“</div>
      <h1 class="font-heading text-4xl md:text-5xl font-bold text-text-dark mb-4">
        Thank You! Your Request is Confirmed.
      </h1>
      <p class="text-lg md:text-xl text-text-muted mb-8">
        Joe personally reviews every request and will be in touch within <strong class="text-primary">1 business day</strong> to discuss your project and schedule your free consultation. We appreciate your patience!
      </p>
      <div class="space-y-4 sm:space-y-0 sm:space-x-4 flex flex-col sm:flex-row justify-center">
        <Button href="/" variant="primary" size="lg">
          Return to Homepage
        </Button>
        <Button href="/blog" variant="ghost" size="lg">
          Explore Joe's Tips
        </Button>
      </div>
    </section>
  </main>
</BaseLayout>