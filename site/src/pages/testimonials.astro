---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import TestimonialCard from '@/components/TestimonialCard.astro';
import CtaBlock from '@/components/sections/CtaBlock.astro';
import { generateLocalBusinessSchema, generateReviewSchema } from '@/utils/seo';

const allTestimonials = await getCollection('testimonials');

// Sort by date, newest first
const sortedTestimonials = allTestimonials.sort((a, b) => (b.data.date?.valueOf() || 0) - (a.data.date?.valueOf() || 0));

// Calculate aggregate rating for LocalBusiness schema
let totalRating = 0;
let reviewCount = 0;
if (allTestimonials.length > 0) {
  allTestimonials.forEach(t => {
    totalRating += t.data.rating;
    reviewCount++;
  });
}
const aggregateRating = reviewCount > 0 ? {
  ratingValue: parseFloat((totalRating / reviewCount).toFixed(1)),
  reviewCount: reviewCount,
} : undefined;

const pageSeo = {
  title: "Client Testimonials & Reviews | Joe the Painter",
  description: "Read what satisfied clients in San Diego County say about Joe the Painter's meticulous craftsmanship, reliability, and personal service for painting and handyman projects.",
  keywords: ["client reviews", "joe the painter testimonials", "san diego painter reviews", "handyman reviews", "customer satisfaction"],
  ogImage: "/images/social-share-testimonials.jpg" // Placeholder for testimonials image
};
---

<BaseLayout seo={pageSeo}>
  <Fragment slot="head-schema">
    <script type="application/ld+json">
      {JSON.stringify(generateLocalBusinessSchema(Astro, sortedTestimonials.map(t => generateReviewSchema(t.data)), aggregateRating))}
    </script>
  </Fragment>

  <section class="container mx-auto px-4 py-16 md:py-24">
    <h1 class="text-center text-4xl md:text-5xl font-heading font-bold text-text-dark mb-12">
      What Our Clients Say
    </h1>
    <p class="text-center text-lg md:text-xl text-text-muted max-w-3xl mx-auto mb-16">
      Our reputation is built on trust, quality, and exceptional service. Read authentic testimonials from homeowners and businesses across San Diego County who have experienced the Joe the Painter difference.
    </p>

    {aggregateRating && (
      <div class="text-center mb-12">
        <p class="text-accent text-5xl font-bold leading-none mb-2">
          {aggregateRating.ratingValue} <span class="text-xl">/ 5</span>
        </p>
        <div class="flex justify-center items-center space-x-1 mb-3">
          {Array.from({ length: Math.round(aggregateRating.ratingValue) }).map(() => (
            <svg class="w-6 h-6 text-accent" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
          ))}
          {Array.from({ length: 5 - Math.round(aggregateRating.ratingValue) }).map(() => (
            <svg class="w-6 h-6 text-gray-300" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
          ))}
        </div>
        <p class="text-text-muted">Based on {aggregateRating.reviewCount} reviews</p>
      </div>
    )}

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedTestimonials.map(testimonial => (
        <TestimonialCard testimonial={testimonial.data} />
      ))}
    </div>

    <div class="text-center mt-16">
      <h2 class="text-3xl font-heading font-semibold text-text-dark mb-6">
        Ready to Experience the Difference?
      </h2>
      <a href="/contact" class="btn btn-primary btn-lg">
        Book Your Free Consultation Today &rarr;
      </a>
    </div>
  </section>

  <CtaBlock />
</BaseLayout>