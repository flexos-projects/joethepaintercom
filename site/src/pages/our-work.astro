---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import ProjectCard from '@components/ProjectCard.astro';

// Placeholder data for projects. This will later come from content collections.
const projects = [
  {
    id: 'project-1',
    title: 'Coastal Home Exterior Refresh',
    location: 'Encinitas, CA',
    description: 'Complete exterior repaint and minor stucco repair for a beautiful coastal home.',
    imageUrl: '/src/assets/project-placeholder-1.webp',
    projectLink: '/projects/coastal-home-refresh',
  },
  {
    id: 'project-2',
    title: 'Modern Living Room Interior',
    location: 'Carlsbad, CA',
    description: 'Transformed a dated living room with a fresh, contemporary color palette and flawless finish.',
    imageUrl: '/src/assets/project-placeholder-2.webp',
    projectLink: '/projects/modern-living-room',
  },
  {
    id: 'project-3',
    title: 'Office Space Renovation',
    location: 'Vista, CA',
    description: 'Updated a small business office with new paint, drywall repair, and fixture installation.',
    imageUrl: '/src/assets/project-placeholder-3.webp',
    projectLink: '/projects/office-renovation',
  },
  {
    id: 'project-4',
    title: 'Kitchen Cabinet Refinishing',
    location: 'San Marcos, CA',
    description: 'Expert cabinet refinishing, giving an old kitchen a brand new, modern look.',
    imageUrl: '/src/assets/project-placeholder-1.webp', // Reusing placeholder
    projectLink: '/projects/cabinet-refinishing',
  },
];

const pageTitle = "Our Work | Joe the Painter: Portfolio of Excellence";
const pageDescription = "Explore Joe the Painter's portfolio of meticulously completed painting and handyman projects across San Diego County. See the quality difference!";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />
  <main class="bg-background py-16 md:py-24">
    <div class="container mx-auto px-4">
      <h1 class="font-heading text-5xl md:text-6xl font-bold text-text-dark text-center mb-8 animate-fade-in">
        Our Work
      </h1>
      <p class="text-xl text-text-muted text-center max-w-3xl mx-auto mb-16 animate-fade-in animate-delay-100">
        Discover the meticulous craftsmanship and transformative results Joe the Painter delivers. From stunning exterior repaints to detailed interior work and essential handyman repairs, our portfolio showcases our commitment to excellence.
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project, index) => (
          <ProjectCard
            title={project.title}
            location={project.location}
            description={project.description}
            imageUrl={project.imageUrl}
            imageAlt={`Image of completed project: ${project.title}`}
            projectLink={project.projectLink}
            style={`animation-delay: ${index * 100}ms;`}
          />
        ))}
      </div>

      <section class="text-center mt-20">
        <h2 class="font-heading text-4xl font-bold text-text-dark mb-6 animate-fade-in">
          Ready to Transform Your Space?
        </h2>
        <p class="text-lg text-text-muted mb-8 animate-fade-in animate-delay-100">
          Let's discuss your vision and bring your project to life with the same dedication and quality.
        </p>
        <a
          href="/consultation"
          class="inline-flex px-8 py-4 bg-accent text-white rounded-lg font-semibold text-lg hover:bg-accent-dark transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-accent animate-fade-in animate-delay-200"
          aria-label="Book a Free Consultation with Joe the Painter"
        >
          Book Your Free Consultation
        </a>
      </section>
    </div>
  </main>
  <Footer />
</BaseLayout>