---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PortfolioGrid from '@/components/PortfolioGrid.astro';
import Button from '@/components/ui/Button.astro';
import type { SiteMeta } from '@/utils/seo';

// Define meta for this page
const pageMeta: SiteMeta = {
  title: "Our Work | Joe the Painter's Project Portfolio - San Diego",
  description: "Explore Joe the Painter's portfolio of meticulous interior, exterior, and handyman projects throughout San Diego County. See before-and-after transformations.",
  ogImage: "/images/social-share-portfolio.jpg"
};
---

<BaseLayout meta={pageMeta}>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24 text-center">
    <h1 class="mb-8">Our Work: A Legacy of Craftsmanship</h1>
    <p class="text-lg text-text-muted max-w-3xl mx-auto mb-10">
      Browse through a selection of my completed painting and handyman projects. Each one reflects my commitment to quality, attention to detail, and the personal touch that defines Joe the Painter.
    </p>
  </section>

  <section class="bg-background-white py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <PortfolioGrid /> {/* This component should fetch and display projects */}
    </div>
  </section>

  <section class="bg-primary-dark text-white py-16 md:py-24 text-center">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-white mb-8">Inspired by Our Transformations?</h2>
      <p class="text-lg text-neutral-100 max-w-2xl mx-auto mb-10">
        Let's discuss how we can bring your vision to life with the same level of expertise and dedication.
      </p>
      <Button href="/consultation" variant="accent" size="lg">Book Your Free Consultation</Button>
    </div>
  </section>
</BaseLayout>