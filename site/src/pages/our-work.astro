---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import ProjectCard from '@/components/ProjectCard.astro';
import CtaBlock from '@/components/sections/CtaBlock.astro';

const projects = await getCollection('projects', ({ data }) => data.published);

const pageSeo = {
  title: "Our Work: Painting & Handy Projects in San Diego County",
  description: "Explore Joe the Painter's portfolio of completed painting and handyman projects across San Diego County. See before-and-after transformations and the quality craftsmanship.",
  keywords: ["painting portfolio", "handyman projects", "before after painting", "san diego projects", "joe the painter work"],
  ogImage: "/images/social-share-portfolio.jpg" // Placeholder for a generic portfolio image
};
---

<BaseLayout seo={pageSeo}>
  <section class="container mx-auto px-4 py-16 md:py-24">
    <h1 class="text-center text-4xl md:text-5xl font-heading font-bold text-text-dark mb-12">
      Our Work: Transformations & Craftsmanship
    </h1>
    <p class="text-center text-lg md:text-xl text-text-muted max-w-3xl mx-auto mb-16">
      Browse a selection of our recent painting and handyman projects across San Diego County. See the meticulous detail and lasting quality that Joe the Painter brings to every home and business.
    </p>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <ProjectCard project={project} />
      ))}
    </div>
  </section>

  <CtaBlock />
</BaseLayout>