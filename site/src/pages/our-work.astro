---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import ProjectCard from '@components/ProjectCard.astro';

const projects = [
  {
    id: 'encinitas-coastal-home-exterior',
    title: 'Encinitas Coastal Home Exterior',
    location: 'Encinitas, CA',
    description: 'Complete exterior repaint and minor stucco repair, transforming a coastal home with a durable, fresh finish.',
    imageUrl: '/images/projects/encinitas-coastal-home-exterior-after.webp',
    projectLink: '/projects/encinitas-coastal-home-exterior',
  },
  {
    id: 'rancho-santa-fe-living-room',
    title: 'Rancho Santa Fe Living Room',
    location: 'Rancho Santa Fe, CA',
    description: 'Transformed a dated living room with a fresh, contemporary color palette and flawless finish.',
    imageUrl: '/images/projects/rancho-santa-fe-living-room-after.webp',
    projectLink: '/projects/rancho-santa-fe-living-room',
  },
  {
    id: 'vista-commercial-office-renovation',
    title: 'Vista Commercial Office Renovation',
    location: 'Vista, CA',
    description: 'Updated a small business office with new paint, drywall repair, and fixture installation for a professional look.',
    imageUrl: '/images/projects/vista-commercial-office-after.webp',
    projectLink: '/projects/vista-commercial-office-renovation',
  },
  {
    id: 'carlsbad-kitchen-cabinet-refinishing',
    title: 'Carlsbad Kitchen Cabinet Refinishing',
    location: 'Carlsbad, CA',
    description: 'Expert cabinet refinishing, giving an old kitchen a brand new, modern look with a durable, smooth finish.',
    imageUrl: '/images/projects/carlsbad-kitchen-cabinets-after.webp',
    projectLink: '/projects/carlsbad-kitchen-cabinet-refinishing',
  },
];

const pageTitle = "Our Work | Joe the Painter: Portfolio of Excellence";
const pageDescription = "Explore Joe the Painter's portfolio of meticulously completed painting and handyman projects across San Diego County. See the quality difference!";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />
  <main class="bg-background py-16 md:py-24">
    <div class="container mx-auto px-4">
      <h1 class="font-heading text-5xl md:text-6xl font-bold text-text text-center mb-8 animate-fade-in">
        Our Work
      </h1>
      <p class="text-xl text-text-muted text-center max-w-3xl mx-auto mb-16 animate-fade-in animate-delay-100">
        Discover the meticulous craftsmanship and transformative results Joe the Painter delivers. From stunning exterior repaints to detailed interior work and essential handyman repairs, our portfolio showcases our commitment to excellence.
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project, index) => (
          <ProjectCard
            title={project.title}
            location={project.location}
            description={project.description}
            imageUrl={project.imageUrl}
            imageAlt={`Image of completed project: ${project.title}`}
            projectLink={project.projectLink}
            style={`animation-delay: ${index * 100}ms;`}
          />
        ))}
      </div>

      <section class="text-center mt-20">
        <h2 class="font-heading text-4xl font-bold text-text text-center mb-6 animate-fade-in">
          Ready to Transform Your Space?
        </h2>
        <p class="text-lg text-text-muted text-center mb-8 animate-fade-in animate-delay-100">
          Let's discuss your vision and bring your project to life with the same dedication and quality.
        </p>
        <a
          href="/consultation"
          class="inline-flex px-8 py-4 bg-accent text-white rounded-lg font-semibold text-lg hover:bg-accent-dark transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-accent animate-fade-in animate-delay-200"
          aria-label="Book a Free Consultation with Joe the Painter"
        >
          Book Your Free Consultation
        </a>
      </section>
    </div>
  </main>
  <Footer />
</BaseLayout>