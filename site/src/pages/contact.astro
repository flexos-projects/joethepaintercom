```astro
---
/**
 * Contact Page
 * /contact
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import Section from '@components/sections/Section.astro';
import Button from '@components/ui/Button.astro';
import ContactForm from '@components/ContactForm.astro';

// Page metadata
const meta = {
  title: 'Contact Joe the Painter | Get Your Free Estimate in San Diego',
  description: 'Reach out to Joe the Painter for meticulous painting and reliable handyman services in San Diego County. Schedule your free consultation today!',
  // ogImage: '/images/og/contact.jpg', // Placeholder, real image would be added later
};
---

<BaseLayout {...meta}>
  <Section id="contact-hero" background="surface" class="py-16 md:py-24">
    <div class="container mx-auto px-4 max-w-4xl text-center">
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-text-dark mb-6">
        Let's Connect About Your Project
      </h1>
      <p class="text-lg md:text-xl text-text-muted max-w-2xl mx-auto mb-10">
        Whether you're planning a full home transformation or need a quick repair, Joe is ready to listen. Reach out today for a personalized, no-obligation consultation.
      </p>

      <div class="flex flex-col md:flex-row items-center justify-center gap-6 mb-12">
        <a
          href="tel:+17605808173"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary text-white font-semibold rounded-lg shadow-md hover:bg-primary-dark transition-colors duration-300 w-full md:w-auto text-lg"
          aria-label="Call Joe the Painter at 7 6 0 5 8 0 8 1 7 3"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Joe: (760) 580-8173
        </a>
        <a
          href="mailto:joe@joethepainter.com"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-secondary text-white font-semibold rounded-lg shadow-md hover:bg-neutral-600 transition-colors duration-300 w-full md:w-auto text-lg"
          aria-label="Email Joe the Painter at joe@joethepainter.com"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-1 12H4a2 2 0 01-2-2V6a2 2 0 012-2h16a2 2 0 012 2v12a2 2 0 01-2 2z" />
          </svg>
          Email Joe
        </a>
      </div>
    </div>
  </Section>

  <Section id="contact-form-section" background="background" class="py-16 md:py-24">
    <div class="container mx-auto px-4 max-w-2xl">
      <h2 class="font-heading text-3xl md:text-4xl font-bold text-text-dark text-center mb-8">
        Send Joe a Message
      </h2>
      <ContactForm action="/thank-you" />
      <p class="text-center text-text-muted text-sm mt-8">
        For a more detailed discussion and a free project estimate, please use our dedicated
        <a href="/consultation" class="text-primary hover:underline font-semibold">Free Consultation Request</a> form.
      </p>
    </div>
  </Section>
</BaseLayout>
```