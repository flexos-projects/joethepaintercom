---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ConsultationForm from '@/components/ConsultationForm.astro';
import CtaBlock from '@/components/sections/CtaBlock.astro';
import { generateLocalBusinessSchema } from '@/utils/seo';

const pageSeo = {
  title: "Contact Joe the Painter | Free Consultation in San Diego",
  description: "Ready to transform your home? Contact Joe the Painter for a free consultation and estimate on painting or handyman services in San Diego County. Call or email us today!",
  keywords: ["contact painter san diego", "free painting estimate", "handyman quote", "joe the painter contact", "book consultation"],
  ogImage: "/images/social-share-contact.jpg" // Placeholder contact image
};
---

<BaseLayout seo={pageSeo}>
  <Fragment slot="head-schema">
    <script type="application/ld+json">
      {JSON.stringify(generateLocalBusinessSchema(Astro))}
    </script>
  </Fragment>

  <section class="container mx-auto px-4 py-16 md:py-24">
    <h1 class="text-center text-4xl md:text-5xl font-heading font-bold text-text-dark mb-12">
      Let's Discuss Your Project
    </h1>

    <div class="grid md:grid-cols-2 gap-12 items-start">
      <div class="bg-surface p-8 rounded-lg shadow-lg">
        <h2 class="font-heading text-3xl font-semibold text-text-dark mb-6">
          Book Your Free Consultation
        </h2>
        <p class="text-lg text-text-muted mb-6">
          Tell us about your painting or handyman needs, and Joe will personally get in touch to discuss your vision and provide a detailed, no-obligation estimate.
        </p>
        <ConsultationForm />
      </div>

      <div class="bg-surface p-8 rounded-lg shadow-lg">
        <h2 class="font-heading text-3xl font-semibold text-text-dark mb-6">
          Direct Contact
        </h2>
        <p class="text-lg text-text-muted mb-8">
          Prefer to speak directly? Reach out to Joe using the contact information below.
        </p>

        <div class="space-y-6">
          <div>
            <h3 class="text-xl font-semibold text-text-dark mb-2">Phone</h3>
            <a href="tel:+17605808173" class="text-primary text-lg hover:underline flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2H5a2 2 0 01-2-2V5z"></path></svg>
              +1 (760) 580-8173
            </a>
          </div>

          <div>
            <h3 class="text-xl font-semibold text-text-dark mb-2">Email</h3>
            <a href="mailto:joe@joethepainter.com" class="text-primary text-lg hover:underline flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 4v7a2 2 0 002 2h14a2 2 0 002-2v-7m-18 0h18"></path></svg>
              joe@joethepainter.com
            </a>
          </div>

          <div class="mt-8">
            <h3 class="text-xl font-semibold text-text-dark mb-2">Service Area</h3>
            <p class="text-lg text-text-muted">
              Proudly serving Central & North San Diego County.
            </p>
            <p class="text-sm text-text-subtle mt-2">
              Including Carlsbad, Encinitas, Vista, San Marcos, Oceanside, Escondido, Poway, Rancho Bernardo, Del Mar, Solana Beach.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CtaBlock />
</BaseLayout>