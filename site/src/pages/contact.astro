---
import BaseLayout from '@layouts/BaseLayout.astro';
import ConsultationForm from '@components/ConsultationForm.astro';

// Page metadata
const pageTitle = "Contact Joe the Painter | Your San Diego Craftsman Since 2001";
const pageDescription = "Reach out to Joe the Painter for a free consultation or any questions about painting and handyman services in San Diego County. Call, email, or fill out our form today!";
const pageCanonicalURL = new URL(Astro.url.pathname, Astro.site);

const meta = {
  title: pageTitle,
  description: pageDescription,
  canonical: pageCanonicalURL,
  ogImage: '/images/social-share-default.jpg', // Default social share image
};
---

<BaseLayout {...meta}>
  <main class="container mx-auto px-4 py-12 md:py-16 lg:py-20 max-w-4xl">
    <section class="text-center mb-12 md:mb-16">
      <h1 class="font-heading text-4xl md:text-5xl font-bold text-text-dark mb-4">
        Contact Joe the Painter
      </h1>
      <p class="font-body text-lg text-text-muted max-w-2xl mx-auto">
        Ready to transform your home or have a question about your next project?
        Reach out directly to Joe for a personalized, no-obligation discussion.
        We're here to provide expert advice and meticulous craftsmanship.
      </p>
    </section>

    <section class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-start">
      <div class="bg-surface-light p-6 md:p-8 rounded-lg shadow-md text-center md:text-left">
        <h2 class="font-heading text-2xl font-semibold text-text-dark mb-4">
          Get In Touch Directly
        </h2>
        <p class="font-body text-base text-text-muted mb-6">
          Joe personally handles all inquiries and is committed to clear communication.
          Choose your preferred method to connect:
        </p>

        <div class="space-y-6">
          <div class="flex flex-col items-center md:items-start">
            <h3 class="font-body text-xl font-medium text-text-dark mb-2">
              Call Joe
            </h3>
            <a
              href="tel:+17605808173"
              class="font-body text-lg text-primary hover:text-primary-dark font-semibold transition-colors duration-fast flex items-center group"
              aria-label="Call Joe at 760-580-8173"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 mr-3 text-primary group-hover:text-primary-dark transition-colors duration-fast"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                />
              </svg>
              +1 (760) 580-8173
            </a>
          </div>

          <div class="flex flex-col items-center md:items-start">
            <h3 class="font-body text-xl font-medium text-text-dark mb-2">
              Email Joe
            </h3>
            <a
              href="mailto:joe@joethepainter.com"
              class="font-body text-lg text-primary hover:text-primary-dark font-semibold transition-colors duration-fast flex items-center group"
              aria-label="Email Joe at joe@joethepainter.com"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 mr-3 text-primary group-hover:text-primary-dark transition-colors duration-fast"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-2 6V7a2 2 0 00-2-2H5a2 2 0 00-2 2v7m14 0l-7 7-7-7"
                />
              </svg>
              joe@joethepainter.com
            </a>
          </div>
        </div>
      </div>

      <div class="bg-surface-light p-6 md:p-8 rounded-lg shadow-md">
        <h2 class="font-heading text-2xl font-semibold text-text-dark mb-4">
          Book Your Free Consultation
        </h2>
        <p class="font-body text-base text-text-muted mb-6">
          Fill out the form below to request a free, no-obligation consultation.
          Joe will get back to you personally to discuss your project needs.
        </p>
        <ConsultationForm />
      </div>
    </section>
  </main>
</BaseLayout>
---