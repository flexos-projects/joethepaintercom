---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ConsultationForm from '@/components/ConsultationForm.astro';
import Button from '@/components/ui/Button.astro';
import type { SiteMeta } from '@/utils/seo';

// Define meta for this page
const pageMeta: SiteMeta = {
  title: "Contact Joe the Painter - Free Consultation in San Diego",
  description: "Get in touch with Joe the Painter for a free consultation and estimate on your painting or handyman project in San Diego County. Call or email today!",
  ogImage: "/images/social-share-contact.jpg"
};

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Joe the Painter",
  "image": "https://www.joethepainter.com/images/joe-profile.jpg", // Professional photo of Joe (placeholder)
  "url": "https://www.joethepainter.com",
  "telephone": "+1-760-580-8173",
  "email": "joe@joethepainter.com",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "San Diego County", // General service area
    "addressRegion": "CA",
    "addressCountry": "US"
  },
  "priceRange": "$$", // Indicative price range
  "hasMap": "https://www.google.com/maps/search/?api=1&query=Joe+the+Painter+San+Diego", // Link to Google Maps search
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "08:00",
      "closes": "17:00"
    }
  ],
  "areaServed": [
    { "@type": "State", "name": "California" },
    { "@type": "City", "name": "Carlsbad" },
    { "@type": "City", "name": "Encinitas" },
    { "@type": "City", "name": "Vista" },
    { "@type": "City", "name": "San Marcos" },
    { "@type": "City", "name": "Oceanside" },
    { "@type": "City", "name": "Escondido" },
    { "@type": "City", "name": "Poway" },
    { "@type": "City", "name": "Rancho Bernardo" },
    { "@type": "City", "name": "Del Mar" },
    { "@type": "City", "name": "Solana Beach" }
  ],
  "geo": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": 33.0903, // Approximate center of North San Diego County
      "longitude": -117.2519
    },
    "geoRadius": 50000 // Radius in meters, ~30 miles
  },
  "review": [], // No specific reviews on contact page
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5", // Placeholder: Assume 5-star for now
    "reviewCount": "25" // Placeholder: Assume 25 reviews for now
  }
};
---

<BaseLayout meta={pageMeta}>
  <Fragment slot="json-ld">
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
  </Fragment>

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <h1 class="text-center mb-8">Get in Touch with Joe</h1>
    <p class="text-lg text-text-muted text-center max-w-3xl mx-auto mb-12">
      Ready to discuss your painting or handyman project? I'm here to provide honest advice and a no-obligation estimate. Choose your preferred method to reach out!
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
      <div class="bg-surface-light p-8 rounded-xl shadow-lg">
        <h2 class="text-primary-dark mb-6">Book Your Free Consultation</h2>
        <ConsultationForm />
      </div>

      <div class="bg-surface-light p-8 rounded-xl shadow-lg flex flex-col justify-between h-full">
        <div>
          <h2 class="text-primary-dark mb-6">Direct Contact</h2>
          <div class="mb-8">
            <h3 class="text-2xl font-semibold mb-2">Phone</h3>
            <p class="text-lg text-text-dark">
              Call me directly for immediate assistance or to discuss your project.
            </p>
            <a href="tel:+17605808173" class="text-primary text-xl font-bold block mt-4 hover:underline">
              +1 (760) 580-8173
            </a>
          </div>

          <div class="mb-8">
            <h3 class="text-2xl font-semibold mb-2">Email</h3>
            <p class="text-lg text-text-dark">
              Send me a detailed message, and I'll get back to you promptly.
            </p>
            <a href="mailto:joe@joethepainter.com" class="text-primary text-xl font-bold block mt-4 hover:underline">
              joe@joethepainter.com
            </a>
          </div>

          <div class="mb-8">
            <h3 class="text-2xl font-semibold mb-2">Service Area</h3>
            <p class="text-lg text-text-dark">
              Proudly serving Central and North San Diego County since 2001.
            </p>
            <p class="text-lg text-text-muted mt-2">
              CA Lic. # <a href="https://www.cslb.ca.gov/OnlineServices/CheckLicenseII/LicenseDetail.aspx?LicNum=802167" target="_blank" rel="noopener noreferrer" class="font-semibold text-primary hover:underline">802167</a>
            </p>
          </div>
        </div>
        <div class="mt-auto">
          <Button href="/about" variant="secondary" size="lg" class="w-full">Learn More About Joe</Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>