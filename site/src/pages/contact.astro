---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ContactForm from '@/components/ContactForm.astro';
import Button from '@/components/ui/Button.astro';
---

<BaseLayout
  title="Contact Joe the Painter"
  description="Get in touch with Joe the Painter for free consultations, estimates, or general inquiries in San Diego County."
  canonical="/contact"
>
  <section class="container mx-auto px-4 py-12 md:py-20">
    <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-12">
      <div class="md:order-2">
        <ContactForm formId="contactPageForm" />
      </div>

      <div class="md:order-1 space-y-8">
        <h1 class="text-5xl font-heading font-bold text-neutral-800">Get in Touch with Joe</h1>
        <p class="text-lg text-neutral-600">
          Whether you need a free consultation, a detailed estimate, or just have a question about your painting or handyman project, Joe is ready to help. Reach out directly or use the form.
        </p>

        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+17605808173" class="text-xl font-semibold text-neutral-800 hover:text-primary transition">
              +1 (760) 580-8173
            </a>
          </div>

          <div class="flex items-center space-x-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 8V6a2 2 0 012-2h14a2 2 0 012 2v10a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
            </svg>
            <a href="mailto:joe@joethepainter.com" class="text-xl font-semibold text-neutral-800 hover:text-primary transition">
              joe@joethepainter.com
            </a>
          </div>
        </div>

        <div class="pt-4">
          <h2 class="text-2xl font-heading font-bold text-neutral-800 mb-4">Ready for a Project?</h2>
          <p class="text-neutral-600 mb-6">
            For specific project discussions and free estimates, book a dedicated consultation with Joe.
          </p>
          <Button href="/consultation" size="lg">
            Book Your Free Consultation
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>