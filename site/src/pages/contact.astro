---
import BaseLayout from '@layouts/BaseLayout.astro';
import ConsultationForm from '@/components/forms/ConsultationForm.astro';
import ContactForm from '@/components/forms/ContactForm.astro';
import Button from '@/components/ui/Button.astro';
---

<BaseLayout
  title="Contact Joe the Painter for a Free Consultation"
  description="Get in touch with Joe the Painter for meticulous painting and reliable handy services in San Diego County. Request a free consultation or ask a quick question."
>
  <main class="container mx-auto px-4 py-16 md:py-24 max-w-7xl">
    <section class="text-center mb-12 md:mb-16">
      <h1 class="text-5xl font-heading font-bold text-text-dark mb-4 md:text-6xl">
        Let's Discuss Your Project
      </h1>
      <p class="text-lg text-text-muted max-w-3xl mx-auto">
        Ready to transform your home or business? Joe provides free, no-obligation consultations to understand your needs and offer expert advice. Reach out today!
      </p>
    </section>

    <section class="grid md:grid-cols-2 gap-12 lg:gap-16 items-start">
      <div class="bg-surface-light p-8 rounded-lg shadow-md border border-border-light">
        <h2 class="text-3xl font-heading font-semibold text-text-dark mb-6">
          Request Your Free Consultation
        </h2>
        <ConsultationForm />
      </div>

      <div class="space-y-10">
        <div class="bg-surface-light p-8 rounded-lg shadow-md border border-border-light">
          <ContactForm />
        </div>

        <div class="bg-primary-blue text-surface-light p-8 rounded-lg shadow-md">
          <h2 class="text-3xl font-heading font-semibold mb-4">Direct Contact</h2>
          <p class="text-lg mb-6">
            Prefer to speak directly with Joe? Feel free to call or email.
          </p>
          <div class="space-y-4">
            <a
              href="tel:+17605808173"
              class="flex items-center text-lg font-medium hover:underline focus:underline transition-all duration-fast"
              aria-label="Call Joe the Painter"
            >
              <svg class="w-6 h-6 mr-3 text-accent-gold" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M6.62 10.79a15.053 15.053 0 006.59 6.59l2.2-2.2a1 1 0 011.1-.25c1.15.38 2.37.58 3.63.58a1 1 0 011 1v3.5a1 1 0 01-1 1C10.74 21 3 13.26 3 4.5a1 1 0 011-1h3.5a1 1 0 011 1c0 1.26.2 2.48.58 3.63a1 1 0 01-.25 1.1l-2.2 2.2z" />
              </svg>
              +1 (760) 580-8173
            </a>
            <a
              href="mailto:joe@joethepainter.com"
              class="flex items-center text-lg font-medium hover:underline focus:underline transition-all duration-fast"
              aria-label="Email Joe the Painter"
            >
              <svg class="w-6 h-6 mr-3 text-accent-gold" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
              </svg>
              joe@joethepainter.com
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
---