---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Hero from '@components/Hero.astro';
import AboutJoeSection from '@components/AboutJoeSection.astro';
import TestimonialCarousel from '@components/TestimonialCarousel.astro';
// Placeholder for service grid, will be added in later tasks
// import ServiceGrid from '@components/ServiceGrid.astro';
---

<BaseLayout
  title="Home"
  description="Joe the Painter: Your trusted, licensed craftsman for meticulous painting and reliable handyman services in San Diego County since 2001."
>
  <Header />
  <main id="main-content">
    <Hero ctaHref="/contact" />
    <AboutJoeSection ctaHref="/contact" />

    <!-- Placeholder for Services Overview -->
    <section class="bg-background py-16 md:py-24" aria-labelledby="services-overview-heading">
      <div class="container mx-auto px-4 text-center">
        <h2 id="services-overview-heading" class="font-heading text-4xl md:text-5xl font-bold text-text mb-6">
          Our Comprehensive Services
        </h2>
        <p class="text-lg md:text-xl text-textMuted mb-12 leading-relaxed max-w-3xl mx-auto">
          From a fresh coat of paint to essential home repairs, Joe the Painter offers integrated solutions delivered with unparalleled craftsmanship.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <a href="/services/painting" class="block group bg-surface rounded-lg shadow-md p-8 transition-all-colors-transform hover:shadow-lg hover:-translate-y-1">
            <h3 class="font-heading text-3xl font-semibold text-text mb-4 group-hover:text-primary transition-colors">
              Painting Services
            </h3>
            <p class="text-textMuted text-lg leading-relaxed">
              Interior, exterior, cabinet refinishing, and commercial painting with meticulous preparation and a flawless finish.
            </p>
            <span class="inline-flex items-center text-primary font-medium mt-6">
              Learn More
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
              </svg>
            </span>
          </a>
          <a href="/services/handy" class="block group bg-surface rounded-lg shadow-md p-8 transition-all-colors-transform hover:shadow-lg hover:-translate-y-1">
            <h3 class="font-heading text-3xl font-semibold text-text mb-4 group-hover:text-primary transition-colors">
              Handy Services
            </h3>
            <p class="text-textMuted text-lg leading-relaxed">
              Reliable repairs for drywall, minor carpentry, pressure washing, fixture installation, and general home maintenance.
            </p>
            <span class="inline-flex items-center text-primary font-medium mt-6">
              Learn More
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
              </svg>
            </span>
          </a>
        </div>
      </div>
    </section>

    <TestimonialCarousel client:load />

    <!-- Placeholder for Project Overview -->
    <section class="bg-surface py-16 md:py-24" aria-labelledby="projects-overview-heading">
      <div class="container mx-auto px-4 text-center">
        <h2 id="projects-overview-heading" class="font-heading text-4xl md:text-5xl font-bold text-text mb-6">
          See Our Work in Action
        </h2>
        <p class="text-lg md:text-xl text-textMuted mb-12 leading-relaxed max-w-3xl mx-auto">
          Explore our portfolio to witness the transformative power of meticulous craftsmanship and attention to detail.
        </p>
        <Button href="/our-work" variant="primary" size="lg">
          View All Projects
        </Button>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="bg-primary text-surface py-16 md:py-20 text-center" aria-labelledby="homepage-cta-heading">
      <div class="container mx-auto px-4 max-w-3xl">
        <h2 id="homepage-cta-heading" class="font-heading text-4xl md:text-5xl font-bold mb-6">
          Ready for Your Home's Transformation?
        </h2>
        <p class="text-lg md:text-xl mb-8">
          Contact Joe today for a free, no-obligation consultation. Let's make your vision a reality.
        </p>
        <Button href="/contact" variant="outline" size="lg">
          Get Your Free Estimate
        </Button>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
---