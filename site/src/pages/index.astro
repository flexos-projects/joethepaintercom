---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Hero from '@components/Hero.astro';
import AboutJoeSection from '@components/AboutJoeSection.astro';
// Other placeholder imports for sections that will be added later
// import ServiceOverview from '@components/sections/ServiceOverview.astro';
// import TestimonialCarousel from '@components/TestimonialCarousel.astro';

const pageTitle = "Joe the Painter: Your Home, My Craft. Done Right Since 2001.";
const pageDescription = "Meticulous painting and reliable handy services in San Diego County. 25+ years licensed experience, personal touch, unparalleled craftsmanship.";

const heroHeadline = "Your Home, My Craft. Done Right Since 2001.";
const heroTagline = "Meticulous Painting & Reliable Handy Services in San Diego County.";
const heroCtaText = "Book Your Free Consultation";
const heroCtaLink = "/consultation"; // Assuming a consultation page/modal
const licenseNumber = "802167";
const cslbLink = `https://www.cslb.ca.gov/OnlineServices/CheckLicenseII/LicenseDetail.aspx?LicNum=${licenseNumber}`;

const aboutJoeTitle = "Meet Joe: Your Personal Craftsman";
const aboutJoeDescription = "With over two decades of licensed experience, Joe brings unparalleled expertise and a personal commitment to every painting and handyman project. Discover the difference trust and quality make.";
const aboutJoeCtaText = "Learn More About Joe";
const aboutJoeCtaLink = "/about";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />
  <main>
    <Hero
      headline={heroHeadline}
      tagline={heroTagline}
      ctaText={heroCtaText}
      ctaLink={heroCtaLink}
      licenseNumber={licenseNumber}
      licenseLink={cslbLink}
    />

    <AboutJoeSection
      title={aboutJoeTitle}
      description={aboutJoeDescription}
      ctaText={aboutJoeCtaText}
      ctaLink={aboutJoeCtaLink}
    />

    <!-- Placeholder for Services Overview -->
    <section class="py-16 md:py-24 bg-surface text-center">
      <div class="container mx-auto px-4">
        <h2 class="font-heading text-4xl font-bold text-text-dark mb-6">Our Services</h2>
        <p class="text-lg text-text-muted mb-12">
          From a fresh coat of paint to essential home repairs, we deliver lasting quality.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-3xl mx-auto">
          <a href="/services/painting" class="bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 group animate-fade-in">
            <h3 class="font-heading text-2xl font-bold text-primary mb-4">Painting Services</h3>
            <p class="text-text-muted group-hover:text-text-dark transition-colors">Interior, Exterior, Cabinet Refinishing & more.</p>
          </a>
          <a href="/services/handy" class="bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 group animate-fade-in animate-delay-100">
            <h3 class="font-heading text-2xl font-bold text-primary mb-4">Handy Services</h3>
            <p class="text-text-muted group-hover:text-text-dark transition-colors">Drywall repair, minor carpentry, fixture installation & more.</p>
          </a>
        </div>
        <div class="mt-12">
          <a href="/consultation" class="inline-flex px-8 py-4 bg-accent text-white rounded-lg font-semibold text-lg hover:bg-accent-dark transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-accent animate-fade-in animate-delay-200">
            Book Your Free Consultation
          </a>
        </div>
      </div>
    </section>

    <!-- Placeholder for Testimonials Carousel -->
    <section class="py-16 md:py-24 bg-background text-center">
      <div class="container mx-auto px-4">
        <h2 class="font-heading text-4xl font-bold text-text-dark mb-6">What Our Clients Say</h2>
        <p class="text-lg text-text-muted mb-12">
          Hear directly from homeowners and businesses who trust Joe the Painter.
        </p>
        <!-- TestimonialCarousel component will go here -->
        <div class="bg-surface p-8 rounded-lg shadow-md animate-fade-in animate-delay-100">
          <p class="text-xl italic text-text-dark mb-4">"Joe's work is simply outstanding. Meticulous, professional, and reliable â€“ he transformed our home!"</p>
          <p class="font-semibold text-primary">- Happy Homeowner, Carlsbad</p>
        </div>
        <div class="mt-12">
          <a href="/testimonials" class="inline-flex px-8 py-4 bg-primary text-white rounded-lg font-semibold text-lg hover:bg-primary-dark transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-light animate-fade-in animate-delay-200">
            Read All Testimonials
          </a>
        </div>
      </div>
    </section>

    <!-- Placeholder for Portfolio/CTA -->
    <section class="py-16 md:py-24 bg-surface text-center">
      <div class="container mx-auto px-4">
        <h2 class="font-heading text-4xl font-bold text-text-dark mb-6">Our Work Speaks for Itself</h2>
        <p class="text-lg text-text-muted mb-12">
          Explore our portfolio of completed painting and handyman projects.
        </p>
        <a href="/our-work" class="inline-flex px-8 py-4 bg-accent text-white rounded-lg font-semibold text-lg hover:bg-accent-dark transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-accent animate-fade-in animate-delay-100">
          View Our Portfolio
        </a>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>