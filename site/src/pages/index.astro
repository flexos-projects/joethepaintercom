---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.astro';
import AboutJoeSection from '@/components/AboutJoeSection.astro';
import TestimonialCarousel from '@/components/TestimonialCarousel.astro';
import type { SiteMeta } from '@/utils/seo';

// Define meta for this page
const pageMeta: SiteMeta = {
  title: "Your Home, My Craft. Done Right Since 2001.",
  description: "Meticulous painting and reliable repairs, personally delivered by a licensed craftsman dedicated to your peace of mind in San Diego County.",
  ogImage: "/images/social-share-home.jpg" // Specific image for homepage
};

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Joe the Painter",
  "image": "https://www.joethepainter.com/images/joe-profile.jpg", // Professional photo of Joe (placeholder)
  "url": "https://www.joethepainter.com",
  "telephone": "+1-760-580-8173",
  "email": "joe@joethepainter.com",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "San Diego County", // General service area
    "addressRegion": "CA",
    "addressCountry": "US"
  },
  "priceRange": "$$", // Indicative price range
  "hasMap": "https://www.google.com/maps/search/?api=1&query=Joe+the+Painter+San+Diego", // Link to Google Maps search
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "08:00",
      "closes": "17:00"
    }
  ],
  "areaServed": [
    { "@type": "State", "name": "California" },
    { "@type": "City", "name": "Carlsbad" },
    { "@type": "City", "name": "Encinitas" },
    { "@type": "City", "name": "Vista" },
    { "@type": "City", "name": "San Marcos" },
    { "@type": "City", "name": "Oceanside" },
    { "@type": "City", "name": "Escondido" },
    { "@type": "City", "name": "Poway" },
    { "@type": "City", "name": "Rancho Bernardo" },
    { "@type": "City", "name": "Del Mar" },
    { "@type": "City", "name": "Solana Beach" }
  ],
  "geo": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": 33.0903, // Approximate center of North San Diego County
      "longitude": -117.2519
    },
    "geoRadius": 50000 // Radius in meters, ~30 miles
  },
  "review": [ /* Will be populated dynamically from testimonials, placeholder for now */ ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5", // Placeholder: Assume 5-star for now
    "reviewCount": "25" // Placeholder: Assume 25 reviews for now
  }
};
---

<BaseLayout meta={pageMeta}>
  <Fragment slot="json-ld">
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
  </Fragment>

  <Hero />

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <h2 class="text-center mb-12">
      Your Trusted Partner for Home & Business
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-16">
      <div class="bg-surface-light p-6 md:p-8 rounded-lg shadow-md flex flex-col items-center text-center">
        <h3 class="font-heading text-primary text-3xl mb-4">Painting Services</h3>
        <p class="text-lg text-text-muted mb-6">
          From vibrant interiors to durable exteriors, Joe delivers a flawless finish that protects and beautifies your property.
        </p>
        <a href="/services/painting" class="btn btn-primary-outline btn-md">Explore Painting</a>
      </div>
      <div class="bg-surface-light p-6 md:p-8 rounded-lg shadow-md flex flex-col items-center text-center">
        <h3 class="font-heading text-primary text-3xl mb-4">Handy Services</h3>
        <p class="text-lg text-text-muted mb-6">
          Seamlessly integrate essential repairs like drywall and carpentry with your painting project, ensuring a comprehensive solution.
        </p>
        <a href="/services/handy" class="btn btn-primary-outline btn-md">Discover Handy Services</a>
      </div>
    </div>
  </section>

  <AboutJoeSection />

  <TestimonialCarousel />

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24 text-center">
    <h2 class="mb-8">Ready for a Transformation?</h2>
    <p class="text-lg text-text-muted max-w-3xl mx-auto mb-10">
      Experience the difference of working with a licensed craftsman dedicated to quality and your peace of mind.
    </p>
    <a href="/consultation" class="btn btn-primary btn-lg">Book Your Free Consultation</a>
  </section>
</BaseLayout>