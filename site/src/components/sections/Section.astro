---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'section'> {
  id: string;
  background?: 'background' | 'surface' | 'primary-blue-dark' | 'secondary-gray';
  centered?: boolean;
}

const { id, background = 'surface', centered = false, ...attrs } = Astro.props;

const backgroundClasses = {
  'background': 'bg-background',
  'surface': 'bg-surface',
  'primary-blue-dark': 'bg-primary-blue-dark',
  'secondary-gray': 'bg-secondary-gray',
}[background];

const containerClasses = `container mx-auto px-4 max-w-7xl ${centered ? 'text-center' : ''}`;
---

<section id={id} class={`${backgroundClasses} py-16 md:py-24`} {...attrs}>
  <div class={containerClasses}>
    <slot />
  </div>
</section>