---
/**
 * Generic Section Component
 * Provides consistent padding, container width, and optional background/centering.
 */
interface Props {
  id?: string;
  title?: string;
  centered?: boolean;
  background?: 'background' | 'dark' | 'none'; // Using design tokens for background
}

const { id, title, centered = false, background = 'none' } = Astro.props;

let sectionClasses = 'py-spacing-12 md:py-spacing-16 lg:py-spacing-20'; // Use spacing tokens

if (background === 'background') {
  sectionClasses += ' bg-background'; // Use background color token
} else if (background === 'dark') {
  sectionClasses += ' bg-text text-white'; // Dark background with light text
}
---

<section id={id} class:list={[sectionClasses]}>
  <div class="container mx-auto px-spacing-4">
    {title && (
      <h2
        class:list={[
          'font-heading text-4xl md:text-5xl font-bold mb-spacing-8',
          centered ? 'text-center mx-auto max-w-3xl' : ''
        ]}
      >
        {title}
      </h2>
    )}
    <slot />
  </div>
</section>