---
interface Props {
  id?: string;
  title?: string;
  description?: string;
  background?: 'light' | 'dark' | 'none';
  centered?: boolean;
}

const { id, title, description, background = 'none', centered = false } = Astro.props;

const sectionClasses = {
  light: 'bg-background text-text',
  dark: 'bg-text text-surface',
  none: 'bg-surface text-text',
};

const titleClasses = centered ? 'text-center' : '';
const descriptionClasses = centered ? 'text-center max-w-3xl mx-auto' : '';
---

<section id={id} class={`py-spacing-24 md:py-spacing-32 ${sectionClasses[background]}`}>
  <div class="container mx-auto px-spacing-4 max-w-layout-max">
    {title && (
      <h2 class={`font-typography-heading text-typography-4xl font-typography-bold mb-spacing-8 ${titleClasses}`}>
        {title}
      </h2>
    )}
    {description && (
      <p class={`text-typography-lg leading-typography-relaxed text-textMuted mb-spacing-12 ${descriptionClasses}`}>
        {description}
      </p>
    )}
    <slot />
  </div>
</section>