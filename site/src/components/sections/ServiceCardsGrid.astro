---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import Button from '@/components/ui/Button.astro';

interface Props {
  services: CollectionEntry<'services'>[];
}

const { services } = Astro.props;
---

<section class="bg-background py-16 md:py-24">
  <div class="container mx-auto px-4">
    <h2 class="text-center text-4xl font-heading font-bold text-text-dark mb-12">
      Our Services
    </h2>
    <p class="text-center text-lg text-text-muted max-w-3xl mx-auto mb-16">
      From meticulous painting to essential handyman repairs, Joe the Painter offers comprehensive solutions to enhance and protect your home or business.
    </p>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(service => (
        <article class="bg-surface rounded-lg shadow-md overflow-hidden flex flex-col h-full group hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
          <div class="relative w-full h-56 overflow-hidden">
            <Image
              src={service.data.featuredImage.src}
              alt={service.data.featuredImage.alt}
              width={600}
              height={336}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
          </div>
          <div class="p-6 flex-grow flex flex-col">
            <h3 class="text-xl font-heading font-semibold mb-2 text-text-dark leading-tight">
              <a href={`/services/${service.slug}`} class="hover:text-primary transition-colors duration-200">
                {service.data.title}
              </a>
            </h3>
            <p class="text-text-muted text-base flex-grow">
              {service.data.shortDescription}
            </p>
            <div class="mt-6">
              <Button href={`/services/${service.slug}`} variant="outline" size="md">
                Learn More
              </Button>
            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="text-center mt-16">
      <h3 class="text-3xl font-heading font-semibold text-text-dark mb-6">
        Ready to start your project?
      </h3>
      <Button href="/contact" size="lg" variant="primary">
        Book Your Free Consultation &rarr;
      </Button>
    </div>
  </div>
</section>