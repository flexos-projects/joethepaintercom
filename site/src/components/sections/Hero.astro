---
import { Image } from 'astro:assets';
import Button from '@/components/ui/Button.astro';

// Placeholder for hero image. Replace with actual image asset.
import heroImage from '@/assets/images/hero-home.webp';
---

<section class="relative bg-background pt-24 pb-16 md:pt-32 md:pb-20 overflow-hidden">
  <div class="container mx-auto px-4 grid md:grid-cols-2 gap-12 items-center">
    <div class="text-center md:text-left z-10">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-heading font-bold text-text-dark mb-6 leading-tight">
        Your Home, My Craft.<br class="hidden md:block"/> Done Right Since <span class="text-primary">2001</span>.
      </h1>
      <p class="text-xl md:text-2xl text-text-muted mb-8 max-w-xl mx-auto md:mx-0">
        Meticulous painting and reliable handy services, personally delivered by a licensed craftsman dedicated to your peace of mind in San Diego County.
      </p>
      <div class="flex flex-col sm:flex-row justify-center md:justify-start gap-4 mb-8">
        <Button href="/contact" size="lg" variant="primary">
          Book Your Free Consultation
        </Button>
        <Button href="/our-work" size="lg" variant="outline">
          View Our Work
        </Button>
      </div>
      <p class="text-sm text-text-subtle">
        CA Lic. # <a href="https://www.cslb.ca.gov/OnlineServices/CheckLicenseII/LicenseDetail.aspx?LicNum=802167" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">802167</a> (Verify License)
      </p>
    </div>
    <div class="relative w-full h-72 md:h-[500px] lg:h-[600px] rounded-lg shadow-xl overflow-hidden z-0">
      <Image
        src={heroImage}
        alt="Joe the Painter smiling in front of a freshly painted house"
        width={1000}
        height={750}
        class="w-full h-full object-cover object-center"
        loading="eager"
        fetchpriority="high"
      />
    </div>
  </div>
</section>