---
import Button from '@components/ui/Button.astro';

interface Props {
  headline: string;
  description: string;
  ctaText: string;
  ctaHref: string;
}

const { headline, description, ctaText, ctaHref } = Astro.props;
---

<section class="bg-primary py-16 md:py-24 text-white text-center">
  <div class="container mx-auto px-4 max-w-4xl">
    <h2 class="font-heading text-4xl md:text-5xl font-bold mb-6">
      {headline}
    </h2>
    <p class="text-lg md:text-xl mb-10 max-w-prose mx-auto">
      {description}
    </p>
    <Button href={ctaHref} variant="accent" size="lg" aria-label={ctaText}>
      {ctaText}
    </Button>
  </div>
</section>