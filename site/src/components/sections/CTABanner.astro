---
import Button from '../ui/Button.astro';

interface Props {
  headline: string;
  description: string;
  ctaText: string;
  ctaHref: string;
  background?: 'primary' | 'secondary' | 'dark';
}

const { headline, description, ctaText, ctaHref, background = 'primary' } = Astro.props;

const bgClasses = {
  primary: 'bg-primary text-surface',
  secondary: 'bg-secondary text-surface',
  dark: 'bg-text text-surface',
};
---

<section class={`py-spacing-16 md:py-spacing-20 ${bgClasses[background]}`}>
  <div class="container mx-auto px-spacing-4 max-w-layout-max text-center">
    <h2 class="font-typography-heading text-typography-4xl md:text-typography-5xl font-typography-bold mb-spacing-4">
      {headline}
    </h2>
    <p class="text-typography-lg leading-typography-relaxed max-w-4xl mx-auto mb-spacing-8 text-surface-light">
      {description}
    </p>
    <Button href={ctaHref} variant="accent" size="lg">
      {ctaText}
    </Button>
  </div>
</section>