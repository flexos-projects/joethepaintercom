---
import Button from '../components/ui/Button.astro';
import Section from './Section.astro';

interface Props {
  headline: string;
  description: string;
  ctaText: string;
  ctaHref: string;
}

const { headline, description, ctaText, ctaHref } = Astro.props;
---

<Section background="primary" class="text-center text-surface py-spacing-16 md:py-spacing-24">
  <h2 class="font-heading text-5xl md:text-6xl font-bold mb-spacing-6 leading-tight">
    {headline}
  </h2>
  <p class="font-body text-xl md:text-2xl mb-spacing-10 max-w-4xl mx-auto opacity-90">
    {description}
  </p>
  <Button href={ctaHref} variant="secondary" size="lg" class="text-primary-blue bg-accent hover:bg-accent-dark border-accent hover:border-accent-dark">
    {ctaText}
  </Button>
</Section>