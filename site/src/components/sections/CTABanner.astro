---
import Button from '../ui/Button.astro';

interface Props {
  headline: string;
  description: string;
  ctaText: string;
  ctaHref: string;
  background?: 'light' | 'dark';
}

const {
  headline,
  description,
  ctaText,
  ctaHref,
  background = 'light',
} = Astro.props;

const bgColor =
  background === 'dark' ? 'bg-primary-dark text-surface' : 'bg-primary text-surface';
const buttonVariant = background === 'dark' ? 'secondary' : 'primary';
---

<section class={`py-16 md:py-20 ${bgColor}`}>
  <div class="container mx-auto px-4 text-center">
    <h2 class="font-heading text-4xl md:text-5xl font-bold mb-4">
      {headline}
    </h2>
    <p class="font-body text-lg md:text-xl max-w-3xl mx-auto mb-8">
      {description}
    </p>
    <Button href={ctaHref} variant={buttonVariant} size="lg">
      {ctaText}
    </Button>
  </div>
</section>