---
/**
 * Call to Action Banner Component
 * Displays a prominent headline, description, and a primary CTA button.
 */
import Button from '@components/ui/Button.astro';

interface Props {
  headline: string;
  description: string;
  ctaText: string;
  ctaHref: string;
}

const { headline, description, ctaText, ctaHref } = Astro.props;
---

<section class="bg-primary text-white py-spacing-12 md:py-spacing-16 lg:py-spacing-20 text-center">
  <div class="container mx-auto px-spacing-4 max-w-4xl">
    <h2 class="font-heading text-3xl md:text-4xl font-bold mb-spacing-4">
      {headline}
    </h2>
    <p class="font-body text-lg mb-spacing-8 opacity-90">
      {description}
    </p>
    <Button href={ctaHref} size="lg" variant="secondary">
      {ctaText}
    </Button>
  </div>
</section>