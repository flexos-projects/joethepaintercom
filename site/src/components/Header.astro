---
import { Image } from 'astro:assets';
import logo from '@images/logo.svg'; // Assuming a logo.svg in public/images or src/assets
import Button from '@components/ui/Button.astro';

// Mobile menu script (inline for immediate availability)
const mobileMenuScript = `
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const closeButton = document.getElementById('mobile-menu-close-button');
  const mainContent = document.getElementById('main-content');
  const body = document.body;

  function toggleMobileMenu() {
    const isExpanded = menuButton?.getAttribute('aria-expanded') === 'true';
    menuButton?.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('translate-x-full'); // Slide out
    mobileMenu?.classList.toggle('translate-x-0');    // Slide in
    body.classList.toggle('overflow-hidden'); // Prevent scroll on body
    mainContent?.setAttribute('aria-hidden', String(!isExpanded)); // Hide main content from screen readers
  }

  menuButton?.addEventListener('click', toggleMobileMenu);
  closeButton?.addEventListener('click', toggleMobileMenu);

  // Close menu if a link is clicked
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      if (!mobileMenu.classList.contains('translate-x-full')) { // If menu is open
        toggleMobileMenu();
      }
    });
  });

  // Trap focus within the mobile menu when open
  mobileMenu?.addEventListener('transitionend', () => {
    if (!mobileMenu.classList.contains('translate-x-full')) { // Menu is open (finished sliding in)
      const focusableElements = mobileMenu.querySelectorAll('button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])');
      const firstFocusable = focusableElements[0] as HTMLElement | undefined;
      const lastFocusable = focusableElements[focusableElements.length - 1] as HTMLElement | undefined;

      if (firstFocusable) firstFocusable.focus();

      mobileMenu.addEventListener('keydown', (e) => {
        if (e.key === 'Tab') {
          if (e.shiftKey) { // Shift + Tab
            if (document.activeElement === firstFocusable) {
              lastFocusable?.focus();
              e.preventDefault();
            }
          } else { // Tab
            if (document.activeElement === lastFocusable) {
              firstFocusable?.focus();
              e.preventDefault();
            }
          }
        }
        if (e.key === 'Escape') {
          toggleMobileMenu();
          menuButton?.focus(); // Return focus to the menu button
        }
      });
    }
  });

  // Close menu on Escape key when open
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !mobileMenu?.classList.contains('translate-x-full')) {
      toggleMobileMenu();
      menuButton?.focus(); // Return focus to the menu button
    }
  });
`;

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Painting Services', href: '/services/painting' },
  { name: 'Handy Services', href: '/services/handy' },
  { name: 'Our Work', href: '/our-work' },
  { name: 'About Joe', href: '/about' },
  { name: 'Contact', href: '/contact' },
];

const currentPath = Astro.url.pathname;

function isActive(href: string) {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<header class="sticky top-0 z-50 bg-surface shadow-md py-4 transition-all duration-300 ease-in-out">
  <div class="container mx-auto px-4 flex items-center justify-between max-w-7xl">
    <!-- Logo -->
    <a href="/" class="flex items-center group" aria-label="Joe the Painter homepage">
      <Image src={logo} alt="Joe the Painter Logo" width={40} height={40} class="mr-3 transition-transform duration-300 group-hover:scale-110" />
      <span class="font-heading text-2xl font-bold text-text-dark group-hover:text-primary-blue transition-colors duration-300">JOE THE PAINTER</span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:flex items-center space-x-8" aria-label="Main navigation">
      <ul role="list" class="flex space-x-8">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[
                "font-body text-base font-medium text-text-dark hover:text-primary-blue transition-colors duration-200 ease-in-out relative py-2",
                { 'text-primary-blue after:absolute after:bottom-0 after:left-0 after:w-full after:h-0.5 after:bg-primary-blue': isActive(link.href) }
              ]}
              aria-current={isActive(link.href) ? 'page' : false}
            >
              {link.name}
            </a>
          </li>
        ))}
      </ul>
      <Button variant="primary" size="md" href="/consultation">
        Book a Free Consultation
      </Button>
    </nav>

    <!-- Mobile Menu Button -->
    <div class="lg:hidden flex items-center">
      <Button variant="primary" size="sm" href="/consultation" class="mr-4">
        Free Consultation
      </Button>
      <button
        id="mobile-menu-button"
        class="text-text-dark hover:text-primary-blue focus:outline-none focus:ring-2 focus:ring-primary-blue rounded-md p-2 transition-colors duration-200"
        aria-label="Open main menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="fixed inset-0 bg-surface z-50 transform translate-x-full transition-transform duration-300 ease-in-out lg:hidden flex flex-col items-center justify-center p-8"
    role="dialog"
    aria-modal="true"
    aria-labelledby="mobile-menu-title"
    tabindex="-1"
  >
    <div class="absolute top-4 right-4">
      <button
        id="mobile-menu-close-button"
        class="text-text-dark hover:text-primary-blue focus:outline-none focus:ring-2 focus:ring-primary-blue rounded-md p-2 transition-colors duration-200"
        aria-label="Close main menu"
      >
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <h2 id="mobile-menu-title" class="sr-only">Main Menu</h2>
    <nav class="flex flex-col items-center space-y-8" aria-label="Mobile navigation">
      <ul role="list" class="flex flex-col items-center space-y-8">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[
                "font-heading text-3xl font-bold text-text-dark hover:text-primary-blue transition-colors duration-200 ease-in-out",
                { 'text-primary-blue': isActive(link.href) }
              ]}
              aria-current={isActive(link.href) ? 'page' : false}
            >
              {link.name}
            </a>
          </li>
        ))}
      </ul>
      <Button variant="primary" size="lg" href="/consultation">
        Book a Free Consultation
      </Button>
    </nav>
  </div>
</header>

<script is:inline>
  {mobileMenuScript}
</script>