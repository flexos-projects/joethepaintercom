---
import { Image } from 'astro:assets';
import logoText from '@images/logo-text.svg'; // Assuming a text-based logo for accessibility
import Button from './ui/Button.astro';
import Nav from './Nav.astro';
import MobileNav from './MobileNav.astro';

// Ensure the logo is a semantic SVG for accessibility and scalability
// Or use an actual image and ensure alt text is present
---

<header class="sticky top-0 z-50 bg-surface shadow-sm transition-all-colors-transform" role="banner">
  <div class="container mx-auto px-4 py-3 md:py-4 flex items-center justify-between">
    <a href="/" class="flex items-center group" aria-label="Joe the Painter homepage">
      <Image
        src={logoText}
        alt="Joe the Painter Logo"
        width={180}
        height={40}
        class="h-8 md:h-10 w-auto transition-transform group-hover:scale-105 motion-reduce:transition-none"
        loading="eager"
        fetchpriority="high"
      />
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:flex items-center space-x-6" aria-label="Main navigation">
      <Nav />
      <Button href="/contact" variant="primary" size="md">
        Book a Free Consultation
      </Button>
    </nav>

    <!-- Mobile Navigation Trigger -->
    <MobileNav />
  </div>
</header>
---