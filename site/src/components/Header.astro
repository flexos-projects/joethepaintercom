---
/**
 * Header Component
 * Provides the global header navigation for the website.
 * Includes the brand logo, desktop navigation links, a prominent CTA,
 * and a mobile hamburger menu icon (hidden on desktop).
 *
 * @param {string} [currentPage] - The path of the current page to highlight active navigation link.
 */

import Logo from './ui/Logo.astro';
import NavLinks from './NavLinks.astro';
import Button from './ui/Button.astro';

interface Props {
  currentPage?: string;
}

const { currentPage } = Astro.props;
---

<header class="sticky top-0 z-50 bg-neutral-surface shadow-sm" aria-label="Global Header Navigation">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between lg:px-8">
    <Logo />

    <!-- Desktop Navigation -->
    <nav class="hidden lg:flex items-center space-x-6" aria-label="Main Navigation">
      <NavLinks {currentPage} />
      <Button variant="primary" size="lg" href="/consultation" class="ml-4">
        Book a Free Consultation
      </Button>
    </nav>

    <!-- Mobile Menu Button (Hidden on Desktop) -->
    <div class="lg:hidden">
      <button
        id="mobile-menu-button"
        aria-label="Open mobile menu"
        aria-expanded="false"
        class="p-2 text-neutral-text hover:text-primary focus-visible:text-primary transition-colors duration-fast"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-7 w-7"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
        </svg>
      </button>
    </div>
  </div>
</header>

<script is:inline>
  // This script will be extended in TASK-008 for full mobile menu functionality.
  // For now, it ensures the button is a valid reference for future JS.
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  if (mobileMenuButton) {
    // Placeholder for mobile menu logic (e.g., toggling a modal/drawer)
    // The actual mobile menu overlay will be implemented in TASK-008
  }
</script>