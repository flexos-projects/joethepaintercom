import { Image } from 'astro:assets';
import logo from '../assets/logo-joethepainter.svg'; // Assuming an SVG logo asset
import Button from './ui/Button.astro';
import Nav from './Nav.astro';
---

<header class="sticky top-0 z-50 bg-white shadow-sm py-4 md:py-5">
  <div class="container flex items-center justify-between">
    <a href="/" class="flex items-center group" aria-label="Joe the Painter homepage">
      <Image src={logo} alt="Joe the Painter Logo" width={40} height={40} class="mr-2 transition-transform duration-200 group-hover:scale-105" />
      <span class="font-heading text-2xl font-bold text-neutral-900 transition-colors duration-200 group-hover:text-primary">
        JOE THE PAINTER
      </span>
    </a>

    <!-- Desktop Navigation -->
    <Nav class="hidden md:flex" />

    <div class="hidden md:block">
      <Button variant="primary" size="md" href="/consultation">
        Book a Free Consultation
      </Button>
    </div>

    <!-- Mobile Hamburger Menu Button -->
    <button
      id="mobile-menu-button"
      class="md:hidden p-2 rounded-md text-neutral-700 hover:bg-neutral-100 focus-visible:ring-2 focus-visible:ring-primary"
      aria-label="Open main menu"
      aria-controls="mobile-menu"
      aria-expanded="false"
    >
      <svg id="hamburger-icon" class="w-6 h-6 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      <svg id="close-icon" class="w-6 h-6 hidden transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <nav
    id="mobile-menu"
    class="fixed inset-0 bg-white z-40 flex flex-col items-center justify-center space-y-8
           md:hidden transform translate-x-full transition-transform duration-300 ease-in-out"
    aria-label="Main navigation"
  >
    <Button
      id="mobile-menu-close-button"
      variant="ghost"
      size="md"
      class="absolute top-5 right-5 text-neutral-700 hover:text-primary"
      aria-label="Close main menu"
    >
      <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </Button>

    <a href="/" class="font-heading text-3xl text-neutral-900 hover:text-primary transition-colors" data-mobile-menu-link>Home</a>
    <a href="/services/painting" class="font-heading text-3xl text-neutral-900 hover:text-primary transition-colors" data-mobile-menu-link>Painting Services</a>
    <a href="/services/handy" class="font-heading text-3xl text-neutral-900 hover:text-primary transition-colors" data-mobile-menu-link>Handy Services</a>
    <a href="/our-work" class="font-heading text-3xl text-neutral-900 hover:text-primary transition-colors" data-mobile-menu-link>Our Work</a>
    <a href="/about" class="font-heading text-3xl text-neutral-900 hover:text-primary transition-colors" data-mobile-menu-link>About Joe</a>
    <a href="/contact" class="font-heading text-3xl text-neutral-900 hover:text-primary transition-colors" data-mobile-menu-link>Contact</a>

    <Button variant="primary" size="lg" href="/consultation" class="mt-8" data-mobile-menu-link>
      Book a Free Consultation
    </Button>
  </nav>
</header>

<script is:inline>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuCloseButton = document.getElementById('mobile-menu-close-button');
  const hamburgerIcon = document.getElementById('hamburger-icon');
  const closeIcon = document.getElementById('close-icon');
  const mobileMenuLinks = document.querySelectorAll('[data-mobile-menu-link]');
  let isMobileMenuOpen = false;

  const toggleMobileMenu = () => {
    isMobileMenuOpen = !isMobileMenuOpen;
    mobileMenuButton?.setAttribute('aria-expanded', String(isMobileMenuOpen));
    mobileMenu?.classList.toggle('translate-x-full', !isMobileMenuOpen);
    document.body.classList.toggle('overflow-hidden', isMobileMenuOpen); // Prevent body scroll
    hamburgerIcon?.classList.toggle('hidden', isMobileMenuOpen);
    closeIcon?.classList.toggle('hidden', !isMobileMenuOpen);

    if (isMobileMenuOpen) {
      // Set focus to the first interactive element in the menu
      const firstLink = mobileMenu?.querySelector('a, button');
      firstLink?.focus();
    } else {
      // Return focus to the hamburger button when menu closes
      mobileMenuButton?.focus();
    }
  };

  mobileMenuButton?.addEventListener('click', toggleMobileMenu);
  mobileMenuCloseButton?.addEventListener('click', toggleMobileMenu);

  mobileMenuLinks.forEach(link => {
    link.addEventListener('click', () => {
      // Close menu when a link is clicked
      if (isMobileMenuOpen) {
        toggleMobileMenu();
      }
    });
  });

  // Close menu on Escape key
  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape' && isMobileMenuOpen) {
      toggleMobileMenu();
    }
  });

  // Ensure menu is closed if screen resizes above mobile breakpoint
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 768 && isMobileMenuOpen) { // md breakpoint is 768px
      toggleMobileMenu();
    }
  });
</script>
