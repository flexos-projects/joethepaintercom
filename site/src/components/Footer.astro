---
import Button from '@/components/ui/Button.astro';
import { Image } from 'astro:assets';
import logo from '@/assets/logo.svg'; // Assuming a logo.svg in assets
---

<footer class="bg-text-dark text-text-muted py-12 md:py-16">
  <div class="container mx-auto px-4 grid md:grid-cols-4 gap-8">
    <!-- Brand Info -->
    <div>
      <a href="/" class="flex items-center mb-4 group" aria-label="Joe the Painter Homepage">
        <Image src={logo} alt="Joe the Painter Logo" width={32} height={32} class="h-8 w-8 mr-2" />
        <span class="text-xl font-heading font-bold text-surface group-hover:text-primary transition-colors duration-200">
          Joe the Painter
        </span>
      </a>
      <p class="text-sm leading-relaxed">
        Meticulous painting and reliable handy services in San Diego County, personally delivered with a quarter-century of proven trust.
      </p>
      <p class="text-xs mt-4">
        CA Lic. # <a href="https://www.cslb.ca.gov/OnlineServices/CheckLicenseII/LicenseDetail.aspx?LicNum=802167" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">802167</a>
      </p>
    </div>

    <!-- Navigation -->
    <div>
      <h3 class="text-lg font-semibold text-surface mb-4">Quick Links</h3>
      <ul class="space-y-2">
        <li><a href="/" class="footer-link">Home</a></li>
        <li><a href="/services/painting" class="footer-link">Painting Services</a></li>
        <li><a href="/services/handy" class="footer-link">Handy Services</a></li>
        <li><a href="/our-work" class="footer-link">Our Work</a></li>
        <li><a href="/about" class="footer-link">About Joe</a></li>
        <li><a href="/contact" class="footer-link">Contact</a></li>
      </ul>
    </div>

    <!-- Resources -->
    <div>
      <h3 class="text-lg font-semibold text-surface mb-4">Resources</h3>
      <ul class="space-y-2">
        <li><a href="/blog" class="footer-link">Blog</a></li>
        <li><a href="/faq" class="footer-link">FAQs</a></li>
        <li><a href="/testimonials" class="footer-link">Testimonials</a></li>
        <li><a href="/process" class="footer-link">Our Process</a></li>
        <li><a href="/privacy-policy" class="footer-link">Privacy Policy</a></li>
      </ul>
    </div>

    <!-- Contact & CTA -->
    <div>
      <h3 class="text-lg font-semibold text-surface mb-4">Get in Touch</h3>
      <p class="text-sm mb-4">
        Ready to start your project? Contact Joe today for a free consultation.
      </p>
      <div class="space-y-2 mb-6">
        <a href="tel:+17605808173" class="text-surface hover:text-primary transition-colors duration-200 flex items-center text-sm">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2H5a2 2 0 01-2-2V5z"></path></svg>
          (760) 580-8173
        </a>
        <a href="mailto:joe@joethepainter.com" class="text-surface hover:text-primary transition-colors duration-200 flex items-center text-sm">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 4v7a2 2 0 002 2h14a2 2 0 002-2v-7m-18 0h18"></path></svg>
          joe@joethepainter.com
        </a>
      </div>
      <Button href="/contact" size="md" variant="accent">
        Book a Free Consultation
      </Button>
    </div>
  </div>

  <div class="container mx-auto px-4 text-center text-xs mt-12 pt-8 border-t border-gray-700">
    <p>&copy; {new Date().getFullYear()} Joe the Painter. All rights reserved.</p>
  </div>
</footer>

<style>
  .footer-link {
    @apply text-text-muted text-sm hover:text-surface transition-colors duration-200;
  }
</style>