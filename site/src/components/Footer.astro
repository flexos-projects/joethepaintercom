---
import Button from './ui/Button.astro';
import { CSLB_LICENSE_NUMBER, CSLB_LICENSE_URL } from '../config';

const footerNav = [
  { name: 'Home', href: '/' },
  { name: 'Painting Services', href: '/services/painting' },
  { name: 'Handy Services', href: '/services/handy' },
  { name: 'Our Work', href: '/our-work' },
  { name: 'About Joe', href: '/about' },
  { name: 'Contact', href: '/contact' },
  { name: 'FAQs', href: '/faq' }, // Assuming this will be created later
  { name: 'Our Process', href: '/process' }, // Assuming this will be created later
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-text-dark text-text-muted py-12 md:py-16">
  <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12">
    <!-- Brand Info -->
    <div class="col-span-1 md:col-span-2 lg:col-span-1">
      <a href="/" class="flex items-center gap-2 text-surface hover:text-primary transition-colors duration-150 ease-in-out mb-4" aria-label="Joe the Painter homepage">
        <img src="/favicon.svg" alt="Joe the Painter Logo" class="h-8 w-8" />
        <span class="font-heading text-2xl font-bold">Joe the Painter</span>
      </a>
      <p class="font-body text-sm mb-4">
        Your trusted craftsman for meticulous painting and reliable handy services in San Diego County.
        Licensed and committed since 2001.
      </p>
      <a
        href={CSLB_LICENSE_URL}
        target="_blank"
        rel="noopener noreferrer"
        class="font-body text-sm text-accent hover:text-surface transition-colors duration-150 ease-in-out flex items-center gap-1"
        aria-label={`Verify California Contractor License ${CSLB_LICENSE_NUMBER}`}
      >
        CA Lic. # {CSLB_LICENSE_NUMBER}
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>

    <!-- Navigation Links -->
    <nav class="col-span-1 lg:col-span-1">
      <h3 class="font-heading text-lg font-semibold text-surface mb-4">Quick Links</h3>
      <ul role="list" class="space-y-2">
        {footerNav.map((link) => (
          <li>
            <a href={link.href} class="font-body text-sm hover:text-surface transition-colors duration-150 ease-in-out">
              {link.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Contact Info -->
    <div class="col-span-1 lg:col-span-1">
      <h3 class="font-heading text-lg font-semibold text-surface mb-4">Contact Joe</h3>
      <address class="not-italic space-y-2 font-body text-sm">
        <p>Serving Central & North San Diego County</p>
        <p>
          <a href="tel:+17605808173" class="hover:text-surface transition-colors duration-150 ease-in-out">
            +1 (760) 580-8173
          </a>
        </p>
        <p>
          <a href="mailto:joe@joethepainter.com" class="hover:text-surface transition-colors duration-150 ease-in-out">
            joe@joethepainter.com
          </a>
        </p>
      </address>
    </div>

    <!-- Call to Action -->
    <div class="col-span-1 md:col-span-4 lg:col-span-1 flex flex-col items-start md:items-center lg:items-start">
      <h3 class="font-heading text-lg font-semibold text-surface mb-4">Ready to Start Your Project?</h3>
      <Button href="/contact" variant="outline" size="md" class="border-surface text-surface hover:bg-surface hover:text-text-dark">
        Book a Free Consultation
      </Button>
      <!-- Placeholder for Social Media Links -->
      <div class="flex gap-4 mt-6">
        <!-- <a href="#" aria-label="Facebook" class="text-surface hover:text-primary transition-colors"><svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">...</svg></a> -->
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 mt-12 pt-8 border-t border-gray-700 text-center">
    <p class="font-body text-xs">&copy; {currentYear} Joe the Painter. All rights reserved.</p>
  </div>
</footer>