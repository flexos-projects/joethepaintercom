---
import Button from './ui/Button.astro';
---

<footer class="bg-text-dark text-text-muted py-12 md:py-16 lg:py-20">
  <div class="container max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12 lg:gap-16 mb-10 md:mb-14 lg:mb-16">
      <!-- Brand Info / Mission -->
      <div>
        <a href="/" class="text-surface-light font-heading text-2xl font-bold mb-4 block" aria-label="Joe the Painter homepage">
          JOE THE PAINTER
        </a>
        <p class="text-text-muted text-sm leading-relaxed max-w-xs">
          Your trusted craftsman for meticulous painting and reliable handy services in San Diego County.
          Done Right Since 2001.
        </p>
      </div>

      <!-- Navigation Links -->
      <nav aria-label="Footer navigation">
        <h3 class="text-surface-light text-lg font-semibold mb-4">Quick Links</h3>
        <ul role="list" class="space-y-2">
          <li><a href="/" class="text-text-muted hover:text-surface-light text-sm transition-colors duration-200">Home</a></li>
          <li><a href="/services/painting" class="text-text-muted hover:text-surface-light text-sm transition-colors duration-200">Painting Services</a></li>
          <li><a href="/services/handy" class="text-text-muted hover:text-surface-light text-sm transition-colors duration-200">Handy Services</a></li>
          <li><a href="/our-work" class="text-text-muted hover:text-surface-light text-sm transition-colors duration-200">Our Work</a></li>
          <li><a href="/about" class="text-text-muted hover:text-surface-light text-sm transition-colors duration-200">About Joe</a></li>
          <li><a href="/contact" class="text-text-muted hover:text-surface-light text-sm transition-colors duration-200">Contact</a></li>
        </ul>
      </nav>

      <!-- Contact Info -->
      <div>
        <h3 class="text-surface-light text-lg font-semibold mb-4">Get In Touch</h3>
        <address class="not-italic space-y-2">
          <p class="text-text-muted text-sm">Serving Central & North San Diego County</p>
          <p>
            <a href="tel:+17605808173" class="text-text-muted hover:text-surface-light text-sm transition-colors duration-200">
              +1 (760) 580-8173
            </a>
          </p>
          <p>
            <a href="mailto:joe@joethepainter.com" class="text-text-muted hover:text-surface-light text-sm transition-colors duration-200">
              joe@joethepainter.com
            </a>
          </p>
          <!-- Placeholder for social links, will be replaced by actual icons/links in P2 -->
          <div class="flex space-x-4 pt-2" aria-label="Social media links">
            <a href="#" class="text-text-subtle hover:text-surface-light text-lg transition-colors duration-200" aria-label="Facebook (placeholder)">
              <!-- Placeholder SVG for Facebook -->
