---
import { Image } from 'astro:assets';
import logoText from '@images/logo-text-light.svg'; // Assuming a light version of the logo for dark background
import Button from './ui/Button.astro';
---

<footer class="bg-text text-textMuted py-12 md:py-16" role="contentinfo">
  <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12">
    <div class="col-span-full md:col-span-1 flex flex-col items-start">
      <a href="/" class="mb-4" aria-label="Joe the Painter homepage">
        <Image
          src={logoText}
          alt="Joe the Painter Logo"
          width={200}
          height={45}
          class="h-9 w-auto"
          loading="lazy"
        />
      </a>
      <p class="text-sm leading-relaxed mb-4">
        Your trusted craftsman for meticulous painting and reliable repairs in San Diego County.
      </p>
      <Button href="/contact" variant="primary" size="sm">
        Book Your Free Consultation
      </Button>
    </div>

    <nav class="md:col-span-1" aria-labelledby="footer-nav-heading">
      <h3 id="footer-nav-heading" class="font-semibold text-surface text-lg mb-4">Quick Links</h3>
      <ul role="list" class="space-y-2">
        <li><a href="/" class="text-textMuted hover:text-surface transition-all-colors-transform">Home</a></li>
        <li><a href="/services/painting" class="text-textMuted hover:text-surface transition-all-colors-transform">Painting Services</a></li>
        <li><a href="/services/handy" class="text-textMuted hover:text-surface transition-all-colors-transform">Handy Services</a></li>
        <li><a href="/our-work" class="text-textMuted hover:text-surface transition-all-colors-transform">Our Work</a></li>
        <li><a href="/about" class="text-textMuted hover:text-surface transition-all-colors-transform">About Joe</a></li>
        <li><a href="/contact" class="text-textMuted hover:text-surface transition-all-colors-transform">Contact</a></li>
      </ul>
    </nav>

    <div class="md:col-span-1" aria-labelledby="footer-contact-heading">
      <h3 id="footer-contact-heading" class="font-semibold text-surface text-lg mb-4">Contact Joe</h3>
      <ul role="list" class="space-y-2">
        <li>
          <a href="tel:+17605808173" class="text-textMuted hover:text-surface transition-all-colors-transform">
            <span class="font-medium">Phone:</span> (760) 580-8173
          </a>
        </li>
        <li>
          <a href="mailto:joe@joethepainter.com" class="text-textMuted hover:text-surface transition-all-colors-transform">
            <span class="font-medium">Email:</span> joe@joethepainter.com
          </a>
        </li>
        <li class="flex items-center">
          <span class="font-medium text-textMuted">License:</span>
          <a
            href="https://www.cslb.ca.gov/OnlineServices/CheckLicenseII/LicenseDetail.aspx?LicNum=802167"
            target="_blank"
            rel="noopener noreferrer"
            class="text-textMuted hover:text-surface transition-all-colors-transform ml-1"
            aria-label="Verify Joe's California Contractor License (opens in new tab)"
          >
            CA Lic. #802167
          </a>
        </li>
      </ul>
    </div>

    <div class="md:col-span-1" aria-labelledby="footer-hours-heading">
      <h3 id="footer-hours-heading" class="font-semibold text-surface text-lg mb-4">Business Hours</h3>
      <p class="text-textMuted">Monday - Friday: 8 AM - 5 PM</p>
      <p class="text-textMuted">Saturday - Sunday: Closed</p>
    </div>
  </div>

  <div class="container mx-auto px-4 mt-12 pt-8 border-t border-secondary-dark text-center text-sm">
    <p>&copy; {new Date().getFullYear()} Joe the Painter. All rights reserved.</p>
  </div>
</footer>
---