```astro
---
import type { HTMLAttributes } from 'astro/types';
import Button from './ui/Button.astro';
import Input from './ui/Input.astro';
import Label from './ui/Label.astro';

interface Props extends HTMLAttributes<'form'> {
  // Any specific props for the contact form, e.g., form action URL
  action: string;
}

const { action, ...attrs } = Astro.props;
---

<form
  action={action}
  method="POST"
  class="space-y-6"
  netlify-honeypot="bot-field"
  data-netlify="true"
  name="contact"
  {...attrs}
>
  <input type="hidden" name="form-name" value="contact" />
  <p class="hidden">
    <label>
      Don’t fill this out if you’re human: <input name="bot-field" />
    </label>
  </p>

  <div>
    <Label for="contact-name">Your Name <span class="text-error">*</span></Label>
    <Input
      id="contact-name"
      type="text"
      name="name"
      autocomplete="name"
      placeholder="John Doe"
      required
      class="w-full"
    />
  </div>

  <div>
    <Label for="contact-email">Your Email <span class="text-error">*</span></Label>
    <Input
      id="contact-email"
      type="email"
      name="email"
      autocomplete="email"
      placeholder="john.doe@example.com"
      required
      class="w-full"
    />
  </div>

  <div>
    <Label for="contact-phone">Phone Number (Optional)</Label>
    <Input
      id="contact-phone"
      type="tel"
      name="phone"
      autocomplete="tel"
      placeholder="(760) 123-4567"
      class="w-full"
    />
  </div>

  <div>
    <Label for="contact-subject">Subject <span class="text-error">*</span></Label>
    <Input
      id="contact-subject"
      type="text"
      name="subject"
      placeholder="Inquiry about exterior painting"
      required
      class="w-full"
    />
  </div>

  <div>
    <Label for="contact-message">Your Message <span class="text-error">*</span></Label>
    <textarea
      id="contact-message"
      name="message"
      rows="5"
      placeholder="Tell Joe about your project or question..."
      required
      class="w-full px-4 py-3 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition"
      aria-describedby="message-help"
    ></textarea>
    <p id="message-help" class="text-text-muted text-sm mt-1">Please provide as much detail as possible.</p>
  </div>

  <Button type="submit" variant="primary" size="lg" class="w-full">
    Send My Message
  </Button>
</form>
