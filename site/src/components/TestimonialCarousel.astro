import type { Testimonial } from '../content/config'; // Assuming Testimonial schema is defined
import Button from './ui/Button.astro';
import { getUniqueId } from '../utils/uniqueId';

interface Props {
  testimonials: Testimonial[];
  carouselId?: string;
  class?: string;
}

const {
  testimonials,
  carouselId = getUniqueId('testimonial-carousel'),
  class: className,
} = Astro.props;

if (!testimonials || testimonials.length === 0) {
  // Render nothing or a fallback message if no testimonials
  console.warn('TestimonialCarousel: No testimonials provided.');
  return;
}

const uniqueSlidesId = getUniqueId('carousel-slides');
const uniqueControlsId = getUniqueId('carousel-controls');
