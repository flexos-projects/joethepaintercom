<section class:list={['relative', className]} aria-label="Client Testimonials Carousel">
  <div
    id={uniqueSlidesId}
    class="flex overflow-hidden relative w-full"
    role="region"
    aria-live="polite"
    aria-atomic="true"
  >
    {testimonials.map((testimonial, index) => (
      <div
        id={`${carouselId}-slide-${index}`}
        role="group"
        aria-roledescription="slide"
        aria-label={`${index + 1} of ${testimonials.length}`}
        class="flex-none w-full p-4 md:p-8 text-center transition-transform duration-500 ease-in-out"
        data-carousel-slide
        data-slide-index={index}
        tabindex="-1"
      >
        <blockquote class="max-w-3xl mx-auto">
          <p class="text-xl md:text-2xl font-heading italic text-neutral-800 mb-6">
            "{testimonial.data.quote}"
          </p>
          <footer class="text-neutral-700 font-body">
            <cite class="block font-semibold not-italic text-lg">
              {testimonial.data.clientName || 'Satisfied Client'}
            </cite>
            {testimonial.data.location && (
              <span class="block text-sm text-neutral-500">
                {testimonial.data.location}
              </span>
            )}
          </footer>
        </blockquote>
      </div>
    ))}
  </div>

  <div class="absolute inset-x-0 bottom-4 flex justify-center space-x-2" role="group" aria-label="Carousel pagination">
    {testimonials.map((_, index) => (
      <button
        type="button"
        class="w-3 h-3 rounded-full bg-neutral-300 hover:bg-primary transition-colors duration-200"
        data-carousel-indicator={index}
        aria-label={`Go to slide ${index + 1}`}
      ></button>
    ))}
  </div>

  <!-- Carousel Navigation Buttons -->
  <div class="absolute inset-y-0 left-0 flex items-center">
    <Button
      variant="ghost"
      size="md"
      class="p-2 rounded-full text-neutral-700 hover:bg-neutral-100 hover:text-primary"
      data-carousel-prev
      aria-controls={uniqueSlidesId}
      aria-label="Previous slide"
    >
      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
      </svg>
    </Button>
  </div>
  <div class="absolute inset-y-0 right-0 flex items-center">
    <Button
      variant="ghost"
      size="md"
      class="p-2 rounded-full text-neutral-700 hover:bg-neutral-100 hover:text-primary"
      data-carousel-next
      aria-controls={uniqueSlidesId}
      aria-label="Next slide"
    >
      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
      </svg>
    </Button>
  </div>
</section>

<script define:vars={{ carouselId, testimonials }} is:inline>
  class TestimonialCarousel {
    constructor(id, testimonialsData) {
      this.carouselElement = document.getElementById(id);
      if (!this.carouselElement) {
        console.error(`Carousel element with ID "${id}" not found.`);
        return;
      }
      this.slidesContainer = this.carouselElement.querySelector('[role="region"]');
      this.slides = Array.from(this.slidesContainer.querySelectorAll('[data-carousel-slide]'));
      this.indicators = Array.from(this.carouselElement.querySelectorAll('[data-carousel-indicator]'));
      this.prevButton = this.carouselElement.querySelector('[data-carousel-prev]');
      this.nextButton = this.carouselElement.querySelector('[data-carousel-next]');
      this.totalSlides = testimonialsData.length;
      this.currentIndex = 0;
      this.autoplayInterval = 5000; // 5 seconds
      this.autoplayTimer = null;

      this.init();
    }

    init() {
      this.updateSlideVisibility();
      this.addEventListeners();
      this.startAutoplay();
    }

    addEventListeners() {
      this.prevButton?.addEventListener('click', () => {
        this.prevSlide();
        this.resetAutoplay();
      });
      this.nextButton?.addEventListener('click', () => {
        this.nextSlide();
        this.resetAutoplay();
      });
      this.indicators.forEach(indicator => {
        indicator.addEventListener('click', (e) => {
          const index = parseInt(e.target.dataset.carouselIndicator);
          this.goToSlide(index);
          this.resetAutoplay();
        });
      });

      // Keyboard navigation for slides
      this.slidesContainer.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
          this.prevSlide();
          this.resetAutoplay();
        } else if (e.key === 'ArrowRight') {
          this.nextSlide();
          this.resetAutoplay();
        }
      });
    }

    startAutoplay() {
      this.autoplayTimer = setInterval(() => {
        this.nextSlide();
      }, this.autoplayInterval);
    }

    resetAutoplay() {
      clearInterval(this.autoplayTimer);
      this.startAutoplay();
    }

    goToSlide(index) {
      this.currentIndex = (index + this.totalSlides) % this.totalSlides;
      this.updateSlideVisibility();
    }

    nextSlide() {
      this.goToSlide(this.currentIndex + 1);
    }

    prevSlide() {
      this.goToSlide(this.currentIndex - 1);
    }

    updateSlideVisibility() {
      this.slides.forEach((slide, i) => {
        const isCurrent = i === this.currentIndex;
        slide.style.transform = `translateX(${-this.currentIndex * 100}%)`;
        slide.setAttribute('aria-hidden', !isCurrent);
        slide.setAttribute('tabindex', isCurrent ? '0' : '-1'); // Make current slide focusable
        // Announce slide change for screen readers
        if (isCurrent && this.slidesContainer.hasAttribute('aria-live')) {
          this.slidesContainer.setAttribute('aria-live', 'off'); // Temporarily turn off live region
          setTimeout(() => {
            this.slidesContainer.setAttribute('aria-live', 'polite');
          }, 100); // Re-enable after a short delay
        }
      });

      this.indicators.forEach((indicator, i) => {
        const isCurrent = i === this.currentIndex;
        indicator.classList.toggle('bg-primary', isCurrent);
        indicator.classList.toggle('bg-neutral-300', !isCurrent);
        indicator.setAttribute('aria-current', isCurrent ? 'true' : 'false');
      });
    }
  }

  // Initialize carousel for each instance
  const carouselInstance = new TestimonialCarousel(carouselId, testimonials);
</script>
