---
// Nav.astro
// Defines the navigation links for both desktop and mobile menus.

interface Props {
  mobile?: boolean; // Flag to apply mobile-specific styling (e.g., larger text)
}

const { mobile = false } = Astro.props;

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Painting Services', href: '/services/painting' },
  { name: 'Handy Services', href: '/services/handy' },
  { name: 'Our Work', href: '/our-work' },
  { name: 'About Joe', href: '/about' },
  { name: 'Contact', href: '/contact' },
];

const baseLinkClasses = 'relative font-body font-medium text-neutral-800 hover:text-primary transition-colors duration-150 ease-in-out focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 rounded-sm';
const desktopLinkClasses = 'text-base py-2 px-3 lg:px-4';
const mobileLinkClasses = 'text-3xl font-heading font-semibold text-neutral-800 hover:text-primary transition-colors duration-150 ease-in-out'; // Larger for mobile menu
---

<ul role="list" class={mobile ? 'flex flex-col items-center space-y-6' : 'flex items-center space-x-4 lg:space-x-6'}>
  {navLinks.map((link) => (
    <li>
      <a
        href={link.href}
        class={[
          baseLinkClasses,
          mobile ? mobileLinkClasses : desktopLinkClasses,
          Astro.url.pathname === link.href ? 'text-primary' : '' // Active link styling
        ].filter(Boolean).join(' ')}
        aria-current={Astro.url.pathname === link.href ? 'page' : undefined}
      >
        {link.name}
        {Astro.url.pathname === link.href && (
          <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary transition-all duration-200"></span>
        )}
      </a>
    </li>
  ))}
</ul>