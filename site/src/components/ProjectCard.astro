---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
---

<article class="bg-surface rounded-lg shadow-md overflow-hidden flex flex-col h-full group hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
  <div class="relative w-full h-56 overflow-hidden">
    <Image
      src={project.data.featuredImage.src}
      alt={project.data.featuredImage.alt}
      width={600}
      height={336}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      loading="lazy"
    />
  </div>
  <div class="p-6 flex-grow flex flex-col">
    <h3 class="text-xl font-heading font-semibold mb-2 text-text-dark leading-tight">
      <a href={`/projects/${project.slug}`} class="hover:text-primary transition-colors duration-200">
        {project.data.title}
      </a>
    </h3>
    <p class="text-sm text-text-muted mb-3">{project.data.location}</p>
    <p class="text-text-muted text-base flex-grow">
      {project.data.shortDescription}
    </p>
    <div class="mt-6">
      <a href={`/projects/${project.slug}`} class="text-primary font-medium hover:underline flex items-center group">
        View Project
        <svg class="w-4 h-4 ml-1 transform translate-x-0 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
      </a>
    </div>
  </div>
</article>