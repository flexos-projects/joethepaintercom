---
import { Image } from 'astro:assets';
import Button from './ui/Button.astro';

interface Props {
  title: string;
  location: string;
  shortDescription: string;
  imageUrl: string;
  imageAlt: string;
  href: string; // Link to the full project page
}

const { title, location, shortDescription, imageUrl, imageAlt, href } = Astro.props;
---

<a href={href} class="block group bg-surface rounded-lg shadow-md overflow-hidden transition-all-colors-transform hover:shadow-lg hover:-translate-y-1 h-full" aria-label={`View project: ${title} in ${location}`}>
  <div class="relative w-full h-48 overflow-hidden">
    <Image
      src={imageUrl}
      alt={imageAlt}
      width={600}
      height={384}
      class="w-full h-full object-cover transition-transform duration-normal ease-default group-hover:scale-105"
      loading="lazy"
    />
  </div>
  <div class="p-6 flex flex-col justify-between h-[calc(100%-12rem)]">
    <div>
      <h3 class="font-heading text-xl font-semibold text-text mb-2 group-hover:text-primary transition-colors">
        {title}
      </h3>
      <p class="text-sm text-textMuted mb-3">{location}</p>
      <p class="text-base text-textMuted leading-relaxed">
        {shortDescription}
      </p>
    </div>
    <div class="mt-4">
      <Button variant="ghost" size="sm" class="!justify-start !p-0" aria-hidden="true" tabindex="-1">
        View Project
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
        </svg>
      </Button>
    </div>
  </div>
</a>
---