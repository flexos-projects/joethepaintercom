---
import { Image } from 'astro:assets';
import projectPlaceholder from '@assets/project-placeholder-1.webp'; // Placeholder image

interface Props {
  title: string;
  location: string;
  description: string;
  imageUrl?: string; // Optional, will be dynamic later
  imageAlt?: string;
  projectLink: string;
}

const {
  title,
  location,
  description,
  imageUrl = projectPlaceholder, // Use placeholder if not provided
  imageAlt = `Completed project: ${title} in ${location}`,
  projectLink,
} = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col h-full hover:shadow-lg transition-shadow duration-300 group animate-fade-in">
  <div class="relative w-full h-56 overflow-hidden">
    <Image
      src={imageUrl}
      alt={imageAlt}
      widths={[320, 640, 960]}
      sizes="(max-width: 768px) 100vw, 33vw"
      loading="lazy"
      quality={80}
      class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500 ease-in-out"
    />
  </div>
  <div class="p-6 flex-1 flex flex-col">
    <h3 class="font-heading text-xl font-bold text-text-dark mb-2">
      <a href={projectLink} class="hover:text-primary transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary">
        {title}
      </a>
    </h3>
    <p class="text-sm text-text-muted mb-4">{location}</p>
    <p class="text-base text-text-muted mb-4 flex-1">
      {description}
    </p>
    <a
      href={projectLink}
      class="inline-flex items-center text-primary font-semibold hover:text-primary-dark transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary"
      aria-label={`View details for ${title} project`}
    >
      View Project Details
      <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
    </a>
  </div>
</article>