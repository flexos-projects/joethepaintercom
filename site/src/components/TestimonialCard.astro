---
import type { CollectionEntry } from 'astro:content';

interface Props {
  testimonial: CollectionEntry<'testimonials'>['data'];
}

const { testimonial } = Astro.props;
---

<article class="bg-surface p-6 rounded-lg shadow-md flex flex-col h-full">
  <div class="flex items-center mb-4">
    {/* Star rating */}
    <div class="flex text-accent mr-3">
      {Array.from({ length: testimonial.rating }).map(() => (
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
      ))}
    </div>
    {testimonial.date && (
      <time datetime={testimonial.date.toISOString()} class="text-sm text-text-subtle">
        {testimonial.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
      </time>
    )}
  </div>
  <blockquote class="text-lg italic text-text-dark flex-grow leading-relaxed">
    "{testimonial.quote}"
  </blockquote>
  <div class="mt-4 pt-4 border-t border-border">
    <p class="font-semibold text-text-dark">{testimonial.clientName}</p>
    <p class="text-sm text-text-muted">{testimonial.location}{testimonial.projectType && `, ${testimonial.projectType}`}</p>
  </div>
</article>