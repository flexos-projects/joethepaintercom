---
interface Props {
  quote: string;
  clientName: string;
  clientLocation: string;
  projectType?: string;
}

const { quote, clientName, clientLocation, projectType } = Astro.props;
---

<div class="bg-surface rounded-lg shadow-md p-6 md:p-8 flex flex-col h-full">
  <blockquote class="text-lg md:text-xl text-text italic leading-relaxed mb-6 flex-grow">
    "{quote}"
  </blockquote>
  <div class="pt-4 border-t border-border">
    <p class="font-semibold text-text text-lg">{clientName}</p>
    <p class="text-textMuted text-sm">{clientLocation} {projectType && `(${projectType})`}</p>
  </div>
</div>
---