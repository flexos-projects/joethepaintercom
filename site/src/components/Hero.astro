---
import { Image } from 'astro:assets';
import Button from './ui/Button.astro';
import heroImage from '@images/hero-joe.webp'; // Assuming a high-quality image of Joe

interface Props {
  ctaHref: string;
}

const { ctaHref } = Astro.props;
---

<section class="relative bg-background overflow-hidden py-16 md:py-24 lg:py-32">
  <div class="container mx-auto px-4 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
    <div class="text-center lg:text-left z-10">
      <h1 class="font-heading text-5xl md:text-6xl lg:text-7xl font-bold text-text mb-6 leading-tight">
        Your Home, My Craft. <br class="hidden md:inline"/>Done Right Since 2001.
      </h1>
      <p class="text-lg md:text-xl text-textMuted mb-8 max-w-xl lg:max-w-none mx-auto lg:mx-0">
        Meticulous painting and reliable handy services, personally delivered by a licensed craftsman dedicated to your peace of mind in San Diego County.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4 mb-8">
        <Button href={ctaHref} variant="primary" size="lg">
          Book Your Free Consultation
        </Button>
        <a
          href="https://www.cslb.ca.gov/OnlineServices/CheckLicenseII/LicenseDetail.aspx?LicNum=802167"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary text-base font-medium hover:underline transition-all-colors-transform"
          aria-label="Verify Joe the Painter's California Contractor License number 802167 (opens in new tab)"
        >
          CA Lic. #802167
        </a>
      </div>
    </div>

    <div class="relative flex justify-center lg:justify-end z-0">
      <Image
        src={heroImage}
        alt="Joe the Painter standing confidently with paint rollers, smiling"
        width={700}
        height={600}
        class="rounded-lg shadow-xl w-full max-w-md lg:max-w-none h-auto object-cover"
        loading="eager"
        fetchpriority="high"
      />
    </div>
  </div>
</section>
---