---
import { Image } from 'astro:assets';
import joeProfile from '@images/joe-profile.webp'; // A professional headshot of Joe
import Button from './ui/Button.astro';

interface Props {
  ctaHref: string;
}

const { ctaHref } = Astro.props;
---

<section class="bg-surface py-16 md:py-24" aria-labelledby="about-joe-heading">
  <div class="container mx-auto px-4 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
    <div class="flex justify-center lg:justify-start">
      <Image
        src={joeProfile}
        alt="Smiling portrait of Joe, the owner of Joe the Painter"
        width={500}
        height={500}
        class="rounded-full shadow-lg w-full max-w-[300px] md:max-w-[400px] h-auto object-cover aspect-square"
        loading="lazy"
      />
    </div>
    <div class="text-center lg:text-left">
      <h2 id="about-joe-heading" class="font-heading text-4xl md:text-5xl font-bold text-text mb-6">
        Meet Joe: Your Trusted Craftsman
      </h2>
      <p class="text-lg text-textMuted mb-6 leading-relaxed">
        With over 25 years as a licensed C33 Painting and Decorating contractor, I've built Joe the Painter on a foundation of integrity, personal service, and superior craftsmanship. I'm not a faceless corporation, but a dedicated individual committed to transforming your home or business with a personal touch.
      </p>
      <p class="text-lg text-textMuted mb-8 leading-relaxed">
        I personally oversee and execute every project, ensuring clear communication and an unwavering attention to detail that larger crews simply can't match.
      </p>
      <Button href="/about" variant="outline" size="lg" class="mr-4">
        Learn More About Joe
      </Button>
      <Button href={ctaHref} variant="primary" size="lg">
        Book Your Free Consultation
      </Button>
    </div>
  </div>
</section>
---