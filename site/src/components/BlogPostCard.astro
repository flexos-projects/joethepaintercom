---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<article class="bg-surface rounded-lg shadow-md overflow-hidden flex flex-col h-full group hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
  {post.data.image && (
    <div class="relative w-full h-48 overflow-hidden">
      <Image
        src={post.data.image.url}
        alt={post.data.image.alt}
        width={600}
        height={384}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
    </div>
  )}
  <div class="p-6 flex-grow flex flex-col">
    <time datetime={post.data.pubDate.toISOString()} class="text-sm text-text-muted mb-2">
      {post.data.pubDate.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
    <h2 class="text-xl font-heading font-semibold mt-2 mb-3 text-text-dark leading-tight">
      <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors duration-200">
        {post.data.title}
      </a>
    </h2>
    <p class="text-text-muted text-base flex-grow">
      {post.data.description}
    </p>
    <div class="flex flex-wrap gap-2 mt-4">
      {post.data.tags.map((tag) => (
        <a href={`/blog?tag=${tag}`} class="text-xs bg-gray-100 px-2 py-1 rounded-full text-text-muted hover:bg-gray-200 transition-colors">
          #{tag}
        </a>
      ))}
    </div>
    <div class="mt-6">
      <a href={`/blog/${post.slug}`} class="text-primary font-medium hover:underline flex items-center group">
        Read More
        <svg class="w-4 h-4 ml-1 transform translate-x-0 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
      </a>
    </div>
  </div>
</article>