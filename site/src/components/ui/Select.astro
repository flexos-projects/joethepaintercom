---
interface Props extends astroHTML.JSX.SelectHTMLAttributes {
  id: string;
  name: string;
  label?: string;
}

const { id, name, label, class: className, ...attrs } = Astro.props;
---

<select
  id={id}
  name={name}
  class:list={[
    "block w-full px-4 py-2 border border-neutral-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-colors duration-200",
    className
  ]}
  {...attrs}
>
  <slot />
</select>