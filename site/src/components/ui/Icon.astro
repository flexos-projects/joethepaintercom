---
/**
 * Icon Component
 * Renders SVG icons based on a provided name.
 * Assumes a minimal set of icons for specific use cases within the project.
 */

// Type imports
import type { HTMLAttributes } from 'astro/types';

// Props interface with JSDoc comments
interface Props extends HTMLAttributes<'div'> {
  /** The name of the icon to render. */
  name: 'arrow-left' | 'arrow-right';
  /** Additional CSS classes to apply to the icon container. */
  class?: string;
}

// Destructure with defaults
const { name, class: className, ...attrs } = Astro.props;

// SVG definitions for the icons.
// These are simple paths, typically optimized for a 24x24 viewBox.
const icons: Record<Props['name'], string> = {
  'arrow-left': `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" /></svg>`,
  'arrow-right': `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>`,
};
---

<div class={className} set:html={icons[name]} {...attrs}></div>

<style>
  /* Base styles for the icon container if needed, e.g., for default sizing */
  div :global(svg) {
    display: block; /* Ensure SVG fills its container correctly */
    width: 100%;
    height: 100%;
  }
</style>