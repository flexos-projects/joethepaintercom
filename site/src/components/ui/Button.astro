---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a' | 'button'> {
  variant?: 'primary' | 'secondary' | 'accent' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  disabled = false,
  ...attrs
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center text-center font-body font-semibold cursor-pointer border transition-all duration-200 ease-in-out rounded-md focus-visible:ring-offset-2 focus-visible:ring-primary-blue';

const variantClasses = {
  primary: 'bg-primary-blue text-white border-primary-blue hover:bg-primary-blue-dark hover:border-primary-blue-dark active:scale-[0.98]',
  secondary: 'bg-secondary-gray text-white border-secondary-gray hover:bg-neutral-600 hover:border-neutral-600 active:scale-[0.98]',
  accent: 'bg-accent-gold text-text-dark border-accent-gold hover:bg-accent-gold-dark hover:border-accent-gold-dark active:scale-[0.98]',
  outline: 'bg-transparent text-primary-blue border-primary-blue hover:bg-primary-blue hover:text-white active:scale-[0.98]',
  ghost: 'bg-transparent text-primary-blue border-transparent hover:bg-primary-blue-light hover:bg-opacity-10 active:scale-[0.98]',
}[variant];

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
}[size];

const disabledClasses = disabled ? 'opacity-60 cursor-not-allowed pointer-events-none' : '';

const Component = href ? 'a' : 'button';
---

<Component
  {...attrs}
  href={href}
  type={Component === 'button' ? type : undefined}
  disabled={disabled}
  class={`${baseClasses} ${variantClasses} ${sizeClasses} ${disabledClasses}`}
>
  <slot />
</Component>