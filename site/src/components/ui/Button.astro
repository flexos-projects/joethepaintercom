---
/**
 * Button Component
 * A reusable UI primitive for interactive elements.
 * Supports various visual styles (variants) and sizes,
 * and can act as either a button or an anchor link.
 *
 * @param {string} [variant='primary'] - Visual style of the button.
 * @param {string} [size='md'] - Size of the button.
 * @param {string} [href] - If provided, renders an <a> tag instead of <button>.
 * @param {boolean} [disabled=false] - Disables the button/link.
 * @param {string} [class] - Additional CSS classes to apply.
 * @param {HTMLAttributes<'a' | 'button'>} [rest] - Other HTML attributes.
 */
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a' | 'button'> {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string; // Optional for anchor buttons
  disabled?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  disabled = false,
  class: className,
  ...rest
} = Astro.props;

// Base styling for all buttons
const baseClasses = 'inline-flex items-center justify-center text-center font-body font-semibold text-white cursor-pointer border-2 border-transparent transition-all duration-150 ease-in-out rounded-md focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2';

// Variant-specific styles (using Tailwind colors defined in config)
const variantClasses = {
  primary: `bg-primary hover:bg-primary-hover active:bg-primary-active hover:shadow-sm active:translate-y-px`,
  secondary: `bg-secondary hover:bg-secondary-hover active:bg-secondary-active hover:shadow-sm active:translate-y-px`,
  outline: `bg-transparent text-primary border-primary hover:bg-primary hover:text-white active:bg-primary-active active:translate-y-px hover:shadow-sm`,
  ghost: `bg-transparent text-primary border-transparent hover:bg-primary/[0.05] active:bg-primary/[0.1] active:translate-y-px`,
};

// Size-specific styles
const sizeClasses = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-3 text-base',
  lg: 'px-6 py-4 text-lg',
};

// Disabled state styles
const disabledClasses = 'opacity-60 cursor-not-allowed';

// Combine all classes
const classes = [
  baseClasses,
  sizeClasses[size],
  variantClasses[variant],
  disabled && disabledClasses, // Apply disabled classes conditionally
  className, // Allow external classes to be passed
].filter(Boolean).join(' '); // Filter out any falsey values and join

// Determine whether to render an <a> or <button> element
const Component = href ? 'a' : 'button';
---

<Component
  {...rest}
  {href}
  {disabled}
  class={classes}
  tabindex={disabled ? -1 : undefined}
  aria-disabled={disabled}
>
  <slot />
</Component>