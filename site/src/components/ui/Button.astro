---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string; // If acting as a link
  target?: '_blank' | '_self' | '_parent' | '_top'; // For link variants
  rel?: string; // For link variants
  fullWidth?: boolean;
  disabled?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  target,
  rel,
  fullWidth = false,
  disabled = false,
  class: className,
  ...rest
} = Astro.props;

// Base styling derived from 06-design.md -> Component Styles -> Buttons -> Base Styling
// and 06-design.md -> Motion -> Timing & Easing.
const baseStyles = 'inline-flex items-center justify-center font-body font-semibold text-center no-underline cursor-pointer border border-transparent transition-all duration-150 ease-in-out rounded-md';

// Variant styles derived from 06-design.md -> Component Styles -> Buttons -> Variants.
// Explicit hex codes are used for hover/active states as specified in the design doc.
const variantStyles = {
  primary: 'bg-primary text-surface border-primary hover:bg-[#003B8D] hover:border-[#003B8D] active:bg-[#002A6B] active:border-[#002A6B] active:translate-y-px hover:shadow-sm',
  secondary: 'bg-secondary text-surface border-secondary hover:bg-[#5A616E] hover:border-[#5A616E] active:bg-[#4D535E] active:border-[#4D535E] active:translate-y-px hover:shadow-sm',
  outline: 'bg-transparent text-primary border-primary hover:bg-primary hover:text-surface active:bg-[#002A6B] active:border-[#002A6B] active:text-surface active:translate-y-px hover:shadow-sm',
  ghost: 'bg-transparent text-primary border-transparent hover:bg-primary/5 active:bg-primary/10 active:translate-y-px',
};

// Size styles derived from 06-design.md -> Component Styles -> Buttons -> Sizes.
const sizeStyles = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-3 text-base',
  lg: 'px-6 py-4 text-lg',
};

// Disabled styles derived from 06-design.md -> Component Styles -> Buttons -> Variants -> Disabled.
const disabledStyles = 'bg-textSubtle border-textSubtle text-surface cursor-not-allowed pointer-events-none';
const widthStyle = fullWidth ? 'w-full' : 'w-auto';

const combinedClasses = [
  baseStyles,
  variantStyles[variant],
  sizeStyles[size],
  widthStyle,
  disabled && disabledStyles,
  className,
].filter(Boolean).join(' ');

// Render as an <a> tag if href is provided, otherwise as a <button>
const Component = href ? 'a' : 'button';
---

<Component
  {...rest}
  class={combinedClasses}
  {href}
  {target}
  {rel}
  {disabled}
  aria-disabled={disabled}
>
  <slot />
</Component>