---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  color?: 'primary' | 'secondary' | 'accent' | 'white' | 'text-dark'; // For outline/ghost text color
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  'aria-label'?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  color, // Used for outline/ghost variants
  type = 'button',
  disabled = false,
  'aria-label': ariaLabel,
  ...rest
} = Astro.props;

const baseClasses = `
  inline-flex items-center justify-center font-body font-semibold text-center
  text-decoration-none cursor-pointer border transition-all duration-150 ease-in-out
  rounded-md focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2
  transform
`;

const sizeClasses = {
  sm: 'py-2 px-3 text-sm',
  md: 'py-3 px-4 text-base',
  lg: 'py-4 px-6 text-lg',
}[size];

let variantClasses = '';
let contentColor = color; // Use explicit color prop for text if provided

switch (variant) {
  case 'primary':
    variantClasses = `
      bg-primary text-white border-primary
      hover:bg-primary-dark hover:border-primary-dark hover:shadow-sm
      active:scale-[0.98] active:bg-primary-darker active:border-primary-darker
      disabled:bg-text-subtle disabled:border-text-subtle disabled:text-white disabled:cursor-not-allowed
    `;
    break;
  case 'secondary':
    variantClasses = `
      bg-secondary text-white border-secondary
      hover:bg-secondary-dark hover:border-secondary-dark hover:shadow-sm
      active:scale-[0.98] active:bg-secondary-darker active:border-secondary-darker
      disabled:bg-text-subtle disabled:border-text-subtle disabled:text-white disabled:cursor-not-allowed
    `;
    break;
  case 'outline':
    const outlineBorderColor = color === 'white' ? 'border-white' : 'border-primary';
    const outlineTextColor = color === 'white' ? 'text-white' : 'text-primary';
    const outlineHoverBg = color === 'white' ? 'hover:bg-white/10' : 'hover:bg-primary';
    const outlineHoverText = color === 'white' ? 'hover:text-white' : 'hover:text-white';
    const outlineHoverBorder = color === 'white' ? 'hover:border-white' : 'hover:border-primary';

    variantClasses = `
      bg-transparent ${outlineTextColor} ${outlineBorderColor}
      ${outlineHoverBg} ${outlineHoverText} ${outlineHoverBorder} hover:shadow-sm
      active:scale-[0.98] active:bg-primary-dark active:border-primary-dark active:text-white
      disabled:text-text-subtle disabled:border-text-subtle disabled:cursor-not-allowed disabled:hover:bg-transparent
    `;
    break;
  case 'ghost':
    const ghostTextColor = color === 'white' ? 'text-white' : 'text-primary';
    const ghostHoverBg = color === 'white' ? 'hover:bg-white/10' : 'hover:bg-primary/5';

    variantClasses = `
      bg-transparent ${ghostTextColor} border-transparent
      ${ghostHoverBg}
      active:scale-[0.98] active:bg-primary/10
      disabled:text-text-subtle disabled:cursor-not-allowed disabled:hover:bg-transparent
    `;
    break;
}

const Tag = href ? 'a' : 'button';
---

<Tag
  class={`${baseClasses} ${sizeClasses} ${variantClasses}`}
  {...href ? { href } : { type }}
  aria-label={ariaLabel}
  disabled={disabled}
  {...rest}
>
  <slot />
</Tag>