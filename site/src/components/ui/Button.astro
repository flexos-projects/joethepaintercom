---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  disabled?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  disabled = false,
  class: className,
  ...attrs
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-semibold text-center text-decoration-none cursor-pointer border transition duration-150 ease-in-out rounded-md';

const variantClasses = {
  primary: `bg-primary text-surface border-primary hover:bg-[#003B8D] hover:border-[#003B8D] active:bg-[#002A6B] active:border-[#002A6B] ${disabled ? 'bg-textSubtle border-textSubtle text-surface cursor-not-allowed' : ''}`,
  secondary: `bg-secondary text-surface border-secondary hover:bg-[#5A616E] hover:border-[#5A616E] active:bg-[#4D535E] active:border-[#4D535E] ${disabled ? 'bg-textSubtle border-textSubtle text-surface cursor-not-allowed' : ''}`,
  outline: `bg-transparent text-primary border-primary hover:bg-primary hover:text-surface ${disabled ? 'text-textSubtle border-textSubtle cursor-not-allowed' : ''}`,
  ghost: `bg-transparent text-primary border-transparent hover:bg-primary/[0.05] active:bg-primary/[0.1] ${disabled ? 'text-textSubtle cursor-not-allowed' : ''}`,
};

const sizeClasses = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-3 text-base',
  lg: 'px-6 py-4 text-lg',
};
---

<button
  class:list={[
    baseClasses,
    variantClasses[variant],
    sizeClasses[size],
    className,
    disabled ? 'opacity-70 cursor-not-allowed' : '',
  ]}
  disabled={disabled}
  {...attrs}
>
  <slot />
</button>