---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  disabled?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  disabled = false,
  class: className,
  ...attrs
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-semibold text-center text-decoration-none border transition duration-150 ease-in-out rounded-md';

const getVariantClasses = (variant: Props['variant'], isDisabled: boolean) => {
  if (isDisabled) {
    switch (variant) {
      case 'primary':
      case 'secondary':
        return 'bg-textSubtle border-textSubtle text-surface';
      case 'outline':
        return 'bg-transparent text-textSubtle border-textSubtle';
      case 'ghost':
        return 'bg-transparent text-textSubtle border-transparent';
      default:
        return '';
    }
  } else {
    switch (variant) {
      case 'primary':
        return 'bg-primary text-surface border-primary hover:bg-[#003B8D] hover:border-[#003B8D] hover:shadow-sm active:bg-[#002A6B] active:border-[#002A6B] active:transform active:translate-y-px';
      case 'secondary':
        return 'bg-secondary text-surface border-secondary hover:bg-[#5A616E] hover:border-[#5A616E] hover:shadow-sm active:bg-[#4D535E] active:border-[#4D535E] active:transform active:translate-y-px';
      case 'outline':
        return 'bg-transparent text-primary border-primary hover:bg-primary hover:text-surface hover:shadow-sm active:bg-[#002A6B] active:border-[#002A6B] active:text-surface active:transform active:translate-y-px';
      case 'ghost':
        return 'bg-transparent text-primary border-transparent hover:bg-primary/[0.05] active:bg-primary/[0.1] active:transform active:translate-y-px';
      default:
        return '';
    }
  }
};

const sizeClasses = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-3 text-base',
  lg: 'px-6 py-4 text-lg',
};

const finalClasses = [
  baseClasses,
  getVariantClasses(variant, disabled),
  sizeClasses[size],
  className,
  disabled ? 'cursor-not-allowed' : 'cursor-pointer',
];
---

<button
  class:list={finalClasses}
  disabled={disabled}
  {...attrs}
>
  <slot />
</button>