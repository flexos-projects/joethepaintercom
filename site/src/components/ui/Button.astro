---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  class?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  type = 'button',
  disabled = false,
  class: className,
  ...attrs
} = Astro.props;

// Base classes for all buttons
const baseClasses = `
  inline-flex items-center justify-center font-body font-semibold text-center no-underline cursor-pointer
  border border-transparent transition-all duration-150 ease-in-out rounded-md
  focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary-light
  whitespace-nowrap
`;

// Variant-specific classes
// Hex codes are used for specific button states as per 06-design.md where they differ from general primary/secondary tokens.
const variantClasses = {
  primary: `
    bg-primary text-white border-primary
    hover:bg-[#003B8D] hover:border-[#003B8D] hover:shadow-sm
    active:translate-y-[1px] active:bg-[#002A6B] active:border-[#002A6B]
  `,
  secondary: `
    bg-secondary text-white border-secondary
    hover:bg-[#5A616E] hover:border-[#5A616E] hover:shadow-sm
    active:translate-y-[1px] active:bg-[#4D535E] active:border-[#4D535E]
  `,
  outline: `
    bg-transparent text-primary border-primary
    hover:bg-primary hover:text-white hover:shadow-sm
    active:translate-y-[1px] active:bg-[#002A6B] active:border-[#002A6B]
  `,
  ghost: `
    bg-transparent text-primary border-transparent
    hover:bg-primary/[0.05]
    active:translate-y-[1px] active:bg-primary/[0.1]
  `,
};

// Size-specific classes
const sizeClasses = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-3 text-base',
  lg: 'px-6 py-4 text-lg',
};

// Disabled state classes, using semantic colors from 06-design.md
const disabledClasses = disabled
  ? 'bg-text-subtle border-text-subtle text-surface cursor-not-allowed pointer-events-none'
  : '';

// Determine if it's a link or a button
const Element = href ? 'a' : 'button';
---

<Element
  {...attrs}
  {href}
  {type}
  disabled={disabled}
  class:list={[
    baseClasses,
    variantClasses[variant],
    sizeClasses[size],
    disabledClasses,
    className
  ]}
>
  <slot />
</Element>