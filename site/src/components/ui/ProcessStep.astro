---
import { Image } from 'astro:assets';

interface Props {
  stepNumber: number;
  title: string;
  description: string;
  image?: { src: string; alt: string; };
}

const { stepNumber, title, description, image } = Astro.props;
---

<div class="flex flex-col md:flex-row items-start gap-x-8 gap-y-4">
  <div class="flex-shrink-0 flex items-center justify-center w-12 h-12 rounded-full bg-primary text-white font-bold text-lg">
    {stepNumber}
  </div>
  <div class="flex-1">
    <h3 class="font-heading text-xl font-semibold text-text-dark mb-2">{title}</h3>
    <p class="text-text-muted">{description}</p>
    {image && (
      <Image
        src={image.src}
        alt={image.alt}
        width={400}
        height={250}
        class="mt-4 rounded-lg shadow-md w-full max-w-xs md:max-w-sm"
        loading="lazy"
        widths={[200, 400, 600]}
        sizes="(max-width: 768px) 100vw, 30vw"
      />
    )}
  </div>
</div>