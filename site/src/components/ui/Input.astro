---
interface Props {
  id: string;
  name: string;
  type?: 'text' | 'email' | 'tel' | 'password' | 'number';
  label?: string;
  placeholder?: string;
  value?: string;
  required?: boolean;
  disabled?: boolean;
  error?: string;
  autocomplete?: string;
}

const {
  id,
  name,
  type = 'text',
  label,
  placeholder,
  value,
  required = false,
  disabled = false,
  error,
  autocomplete,
} = Astro.props;

const baseClasses = `
  w-full px-4 py-3 font-body text-base text-text-dark bg-surface
  border border-border rounded-md
  focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary
  placeholder-text-muted transition-all duration-150 ease-in-out
  disabled:bg-background disabled:cursor-not-allowed disabled:text-text-subtle
`;

const errorClasses = error ? 'border-error ring-error' : '';
---

<div class="mb-4">
  {label && <label for={id} class="block font-body text-sm font-medium text-text-dark mb-1">{label}</label>}
  <input
    id={id}
    name={name}
    type={type}
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
    autocomplete={autocomplete}
    class={`${baseClasses} ${errorClasses}`}
    aria-invalid={error ? 'true' : 'false'}
    aria-describedby={error ? `${id}-error` : undefined}
  />
  {error && <p id={`${id}-error`} class="text-error text-sm mt-1">{error}</p>}
</div>