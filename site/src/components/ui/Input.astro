import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'input'> {
  label: string;
  id: string;
  type?: 'text' | 'email' | 'tel' | 'password' | 'number';
  placeholder?: string;
  required?: boolean;
  value?: string;
  error?: string; // For displaying validation errors
  class?: string;
}

const {
  label,
  id,
  type = 'text',
  placeholder,
  required = false,
  value,
  error,
  class: className,
  ...props
} = Astro.props;

const inputClasses = [
  'form-input-base', // Defined in global.css
  error ? 'border-error ring-error ring-opacity-50' : '',
  className,
];

// Generate a unique ID for the error message if an error exists
const errorId = error ? `${id}-error` : undefined;
---

<div class="w-full">
  <label for={id} class="form-label-base">
    {label}
    {required && <span class="text-error ml-1" aria-hidden="true">*</span>}
  </label>
  <input
    type={type}
    id={id}
    name={id}
    placeholder={placeholder}
    required={required}
    value={value}
    class:list={inputClasses}
    aria-invalid={!!error}
    aria-describedby={errorId}
    {...props}
  />
  {error && (
    <p id={errorId} class="text-error text-sm mt-1" role="alert">
      {error}
    </p>
  )}
</div>
