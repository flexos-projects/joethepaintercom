---
interface Props {
  id: string;
  name: string;
  type?: 'text' | 'email' | 'password' | 'tel' | 'url' | 'number' | 'date';
  placeholder?: string;
  required?: boolean;
  minLength?: number;
  maxLength?: number;
  pattern?: string;
  title?: string;
  value?: string;
  disabled?: boolean;
  isInvalid?: boolean; // Added for error state styling based on design system
  errorMessageId?: string; // Optional ID for an associated error message element for accessibility
}

const {
  id,
  name,
  type = 'text',
  placeholder,
  required = false,
  minLength,
  maxLength,
  pattern,
  title,
  value,
  disabled = false,
  isInvalid = false, // Default to false, controlled by parent form component
  errorMessageId,
} = Astro.props;

// Dynamically build the class string to apply error styling if isInvalid is true
const inputClasses = [
  "w-full px-4 py-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent bg-surface text-text text-base transition-colors duration-200",
  "disabled:bg-background disabled:cursor-not-allowed disabled:text-textSubtle", // Disabled styles
  isInvalid ? "border-error" : "border-border" // Conditional border color based on validation state
].join(" ");

// Conditionally apply aria-describedby attribute only if an errorMessageId is provided
const ariaDescribedByAttrs = errorMessageId ? { 'aria-describedby': errorMessageId } : {};
---

<input
  id={id}
  name={name}
  type={type}
  placeholder={placeholder}
  required={required}
  minlength={minLength}
  maxlength={maxLength}
  pattern={pattern}
  title={title}
  value={value}
  disabled={disabled}
  class={inputClasses}
  {...ariaDescribedByAttrs}
/>