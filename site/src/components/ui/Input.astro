---
/**
 * Input.astro
 *
 * A reusable input component for text, email, password, tel, etc.
 * Applies consistent styling and accessibility attributes.
 */

// Type imports
import type { HTMLAttributes } from 'astro/types';

// Props interface with JSDoc comments
interface Props extends HTMLAttributes<'input'> {
  /** The type of the input (e.g., 'text', 'email', 'password', 'tel') */
  type?: 'text' | 'email' | 'password' | 'tel' | 'url' | 'number' | 'search';
  /** The name attribute for the input, used for form submission */
  name: string;
  /** The id attribute for the input, crucial for linking with labels */
  id: string;
  /** Placeholder text for the input */
  placeholder?: string;
  /** Whether the input is required */
  required?: boolean;
  /** Value of the input */
  value?: string;
  /** Whether the input is disabled */
  disabled?: boolean;
  /** Aria-required attribute for accessibility */
  'aria-required'?: boolean;
  /** Aria-describedby attribute for accessibility, linking to help/error text */
  'aria-describedby'?: string;
  /** Custom Tailwind classes to apply to the input */
  class?: string;
}

// Destructure with defaults
const {
  type = 'text',
  name,
  id,
  placeholder,
  required = false,
  value,
  disabled = false,
  class: className,
  ...attrs
} = Astro.props;
---

<input
  type={type}
  name={name}
  id={id}
  placeholder={placeholder}
  required={required}
  value={value}
  disabled={disabled}
  class:list={[
    'block w-full border border-border rounded-md p-3 text-base text-text bg-surface placeholder-neutral-400',
    'focus:outline-none focus:ring-2 focus:ring-primary/[0.2] focus:border-primary',
    'transition-all duration-150 ease-in-out',
    className,
  ]}
  aria-required={required ? 'true' : undefined}
  {...attrs}
/>

<style>
  /* Base styles are applied via Tailwind classes in the component definition.
     This <style> block is kept for potential future component-specific CSS,
     but is empty as Tailwind is preferred for design tokens. */
</style>