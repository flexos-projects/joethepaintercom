---
import type { HTMLAttributes } from 'astro/types';
import Label from './Label.astro';

interface Props extends HTMLAttributes<'input'> {
  label: string;
  name: string;
  type?: 'text' | 'email' | 'tel' | 'password' | 'number';
  placeholder?: string;
  value?: string;
  required?: boolean;
  disabled?: boolean;
  error?: string;
  id?: string;
  class?: string;
}

const {
  label,
  name,
  type = 'text',
  placeholder,
  value,
  required = false,
  disabled = false,
  error,
  id = name, // Default ID to name if not provided
  class: className,
  ...rest
} = Astro.props;

const inputClasses = [
  'w-full px-4 py-3 border rounded-md text-text bg-surface',
  'placeholder:text-textMuted',
  'focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent', // Custom focus
  error ? 'border-error' : 'border-border',
  disabled && 'opacity-60 cursor-not-allowed bg-background',
  className,
].filter(Boolean).join(' ');

const errorId = error ? `${id}-error` : undefined;
---

<div class="mb-4">
  <Label for={id} required={required}>{label}</Label>
  <input
    id={id}
    name={name}
    type={type}
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
    class={inputClasses}
    aria-invalid={!!error}
    aria-describedby={errorId}
    {...rest}
  />
  {error && (
    <p id={errorId} class="text-error text-sm mt-1" role="alert">
      {error}
    </p>
  )}
</div>