---
interface Props {
  id: string;
  name: string;
  type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url';
  placeholder?: string;
  required?: boolean;
  value?: string;
  disabled?: boolean;
  autocomplete?: string;
  'aria-describedby'?: string;
  'aria-invalid'?: boolean;
}

const {
  id,
  name,
  type = 'text',
  placeholder,
  required = false,
  value,
  disabled = false,
  autocomplete,
  'aria-describedby': ariaDescribedby,
  'aria-invalid': ariaInvalid = false,
  ...rest
} = Astro.props;
---

<input
  id={id}
  name={name}
  type={type}
  placeholder={placeholder}
  required={required}
  value={value}
  disabled={disabled}
  autocomplete={autocomplete}
  aria-describedby={ariaDescribedby}
  aria-invalid={ariaInvalid}
  class:list={[
    "w-full p-3 border rounded-md text-text-dark bg-surface",
    "border-border placeholder-text-muted focus:outline-none",
    "focus-visible:ring-2 focus-visible:ring-primary focus-visible:border-transparent",
    disabled && "bg-background cursor-not-allowed text-text-subtle",
    ariaInvalid && "border-error focus-visible:ring-error"
  ]}
  {...rest}
/>