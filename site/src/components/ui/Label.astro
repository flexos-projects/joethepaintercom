---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'label'> {
  for: string;
  required?: boolean;
  class?: string;
}

const { for: htmlFor, required = false, class: className, ...rest } = Astro.props;
---

<label
  for={htmlFor}
  class:list={[
    'block text-sm font-medium text-text mb-1.5',
    className,
  ]}
  {...rest}
>
  <slot />
  {required && <span class="text-error ml-1" aria-hidden="true">*</span>}
</label>
---