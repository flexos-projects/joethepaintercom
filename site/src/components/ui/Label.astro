---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'label'> {
  for: string;
}

const { for: htmlFor, ...attrs } = Astro.props;
---

<label
  for={htmlFor}
  class="block text-sm font-medium text-text mb-1 cursor-pointer"
  {...attrs}
>
  <slot />
</label>