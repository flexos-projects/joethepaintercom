import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'label'> {
  for: string;
  required?: boolean;
  class?: string;
}

const {
  for: htmlFor,
  required = false,
  class: className,
  ...props
} = Astro.props;
---

<label for={htmlFor} class:list={['form-label-base', className]} {...props}>
  <slot />
  {required && <span class="text-error ml-1" aria-hidden="true">*</span>}
</label>
