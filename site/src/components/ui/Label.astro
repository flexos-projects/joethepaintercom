---
interface Props {
  for: string;
  class?: string;
  required?: boolean;
}

const { for: id, class: className, required = false } = Astro.props;
---
<label
  for={id}
  class:list={[
    "block font-medium text-sm text-text mb-spacing-1",
    className
  ]}
>
  <slot />
  {required && <span class="text-error ml-spacing-0-5">*</span>}
</label>