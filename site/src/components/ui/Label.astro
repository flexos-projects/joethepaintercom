---
/**
 * Label.astro
 *
 * A reusable label component for form elements.
 * Ensures accessibility by linking to its associated input.
 */

// Type imports
import type { HTMLAttributes } from 'astro/types';

// Props interface with JSDoc comments
interface Props extends HTMLAttributes<'label'> {
  /** The `for` attribute, linking the label to an input's `id`. */
  for: string;
  /** Custom Tailwind classes to apply to the label. */
  class?: string;
}

// Destructure with defaults
const {
  for: htmlFor, // Rename 'for' to 'htmlFor' to avoid keyword conflict
  class: className,
  ...attrs
} = Astro.props;
---

<label
  for={htmlFor}
  class:list={[
    'font-body text-sm font-medium text-text mb-2 block',
    className,
  ]}
  {...attrs}
>
  <slot />
</label>

<style>
  /* Base styles are applied via Tailwind classes in the component definition.
     This <style> block is kept for potential future component-specific CSS,
     but is empty as Tailwind is preferred for design tokens. */
</style>