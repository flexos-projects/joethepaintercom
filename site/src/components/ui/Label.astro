---
interface Props {
  for: string;
  text: string;
  required?: boolean;
}

const { for: htmlFor, text, required = false } = Astro.props;
---

<label for={htmlFor} class="block font-body text-sm font-medium text-text-dark mb-1">
  {text}
  {required && <span class="text-error ml-1">*</span>}
</label>