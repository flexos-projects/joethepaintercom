---
/**
 * Base Layout
 * Used by all pages for consistent structure
 */

// Components
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';

// Types
interface Props {
  title: string;
  description: string;
  ogImage?: string;
  noIndex?: boolean;
  bodyClass?: string;
}

const {
  title,
  description,
  ogImage = '/images/og-default.png', // Default OG image as per technical spec
  noIndex = false,
  bodyClass,
} = Astro.props;

// Build canonical URL as per SEO specs
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- SEO Component for dynamic metadata -->
  <SEO
    title={title}
    description={description}
    ogImage={ogImage}
    canonicalURL={canonicalURL.href}
    noIndex={noIndex}
  />

  <!-- Preconnect to external origins for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Fonts - preload critical font (Inter for body) -->
  <!-- Assumes inter-var.woff2 is placed in public/fonts/ by TASK-002 or later -->
  <link
    rel="preload"
    href="/fonts/inter-var.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  >

  <!-- Favicon - As per technical spec, these files will be in public/ -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

  <!-- Theme color for browser UI -->
  <meta name="theme-color" content="#000000">

  <!-- Slot for page-specific head content (e.g., custom scripts, additional meta) -->
  <slot name="head" />
</head>
<body class:list={['min-h-screen flex flex-col', bodyClass]}>
  <!-- Skip to main content link for accessibility -->
  <a
    href="#main-content"
    class="skip-link"
  >
    Skip to main content
  </a>

  <!-- Header component -->
  <Header />

  <!-- Main content area -->
  <main id="main-content" class="flex-1">
    <slot />
  </main>

  <!-- Footer component -->
  <Footer />

  <!-- Slot for page-specific scripts (e.g., analytics, interactive JS) -->
  <slot name="scripts" />
</body>
</html>

<style is:global>
  /* Design Tokens - imported from tokens.css (populated in TASK-002) */
  @import '../styles/tokens.css';

  /* CSS Reset - minimal and modern */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  /* Smooth scrolling with respect for user's reduced motion preference */
  html {
    scroll-behavior: smooth;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  /* Body defaults based on design tokens */
  body {
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: var(--leading-normal);
    color: var(--color-text);
    background: var(--color-background);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Accessible focus-visible styles for keyboard navigation */
  :focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  /* Remove default focus outline for mouse users to avoid redundant visuals */
  :focus:not(:focus-visible) {
    outline: none;
  }

  /* Custom selection styling */
  ::selection {
    background: var(--color-primary);
    color: var(--color-surface);
  }

  /* Skip link styling for accessibility, hidden until focused */
  .skip-link {
    position: absolute;
    top: -9999px; /* Off-screen */
    left: 50%;
    transform: translateX(-50%);
    padding: var(--spacing-2) var(--spacing-4);
    background: var(--color-primary);
    color: var(--color-surface);
    border-radius: var(--radius-md);
    z-index: 1000; /* Ensure it's above other content */
    transition: top var(--animation-duration-fast) var(--animation-easing-default);
  }

  .skip-link:focus {
    top: var(--spacing-4); /* Bring into view on focus */
  }

  /* Responsive images default */
  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* Base link styling */
  a {
    color: inherit;
    text-decoration: none;
  }
</style>