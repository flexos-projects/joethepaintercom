---
import { getMetaTags, generateOrganizationSchema, generateWebSiteSchema, generateWebPageSchema, defaultOgImage, defaultSiteTitle, defaultSiteDescription } from '@/utils/seo';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  seo: {
    title?: string;
    description?: string;
    keywords?: string[];
    ogImage?: string;
    twitterImage?: string;
  };
}

const { seo: pageSeo } = Astro.props;

const { title, description, canonicalURL, ogImage, twitterImage, keywords } = getMetaTags(Astro, pageSeo);

const organizationSchema = generateOrganizationSchema(Astro);
const websiteSchema = generateWebSiteSchema(Astro);
const webpageSchema = generateWebPageSchema(Astro, { title: pageSeo.title || defaultSiteTitle, description: pageSeo.description || defaultSiteDescription });

const allSchemas = [organizationSchema, websiteSchema, webpageSchema];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={String(canonicalURL)} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Dynamic Page-Specific Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    {keywords && <meta name="keywords" content={keywords} />}

    <!-- Open Graph / Social Media Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={String(canonicalURL)} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={String(canonicalURL)} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={twitterImage} />
    <meta name="twitter:creator" content="@JoeThePainterSD" /> <!-- Placeholder, update if account exists -->

    <!-- Base JSON-LD Schema -->
    <script type="application/ld+json">
      {JSON.stringify(allSchemas)}
    </script>
    
    <!-- Page-specific JSON-LD Schema -->
    <slot name="head-schema" />
  </head>
  <body class="bg-background text-text-dark font-body min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>