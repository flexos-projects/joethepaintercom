---
import type { PageMeta } from '@/types/page-meta';
import { SITE_NAME, SITE_URL } from '@/utils/constants';

interface Props {
  meta: PageMeta;
}

const { meta } = Astro.props;

// Construct canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site || SITE_URL).href;

// Default image for Open Graph and Twitter cards
const defaultOgImage = new URL('/images/social-share-default.jpg', Astro.site || SITE_URL).href;

// Import global styles
import '@/styles/global.css';
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Dynamic Page-Specific Meta Tags -->
    <title>{meta.title} | {SITE_NAME}</title>
    <meta name="description" content={meta.description} />
    {meta.keywords && <meta name="keywords" content={meta.keywords} />}

    <!-- Open Graph / Social Media Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${meta.title} | ${SITE_NAME}`} />
    <meta property="og:description" content={meta.description} />
    <meta property="og:image" content={meta.ogImage || defaultOgImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={`${meta.title} | ${SITE_NAME}`} />
    <meta name="twitter:description" content={meta.description} />
    <meta name="twitter:image" content={meta.ogImage || defaultOgImage} />
    {/* If a Twitter account is created */}
    {/* <meta name="twitter:creator" content="@JoeThePainterSD" /> */}

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload critical fonts for LCP optimization -->
    <!-- Lora Bold for primary headings -->
    <link rel="preload" href="/fonts/Lora-Bold.woff2" as="font" type="font/woff2" crossorigin />
    <!-- Inter Regular for body text -->
    <link rel="preload" href="/fonts/Inter-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <!-- Inter Semibold for navigation and CTAs -->
    <link rel="preload" href="/fonts/Inter-SemiBold.woff2" as="font" type="font/woff2" crossorigin />

    {/* Google Analytics - Placeholder, will be added via component for production only */}
    {/* <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXXXXX');
    </script> */}
  </head>
  <body class="flex flex-col min-h-full">
    <slot />
  </body>
</html>