---
/**
 * Base Layout
 * Used by all pages for consistent structure
 */

// Components
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';

// Styles
import '../styles/global.css';

// Types
interface Props {
  title: string;
  description: string;
  ogImage?: string;
  noIndex?: boolean;
  bodyClass?: string;
}

const {
  title,
  description,
  ogImage = '/images/og-default.png',
  noIndex = false,
  bodyClass,
} = Astro.props;

// Build canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- SEO Component -->
  <SEO
    title={title}
    description={description}
    ogImage={ogImage}
    canonicalURL={canonicalURL.href}
    noIndex={noIndex}
  />

  <!-- Preconnect to external origins -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Fonts - preload critical font (Inter) -->
  <link
    rel="preload"
    href="/fonts/Inter-roman.var.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  >
  <!-- Optional: Preload Lora if used prominently above the fold -->
  <link
    rel="preload"
    href="/fonts/Lora-roman.var.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  >

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

  <!-- Theme color -->
  <meta name="theme-color" content="#0047AB">

  <!-- Slot for page-specific head content -->
  <slot name="head" />
</head>
<body class:list={['min-h-screen flex flex-col', bodyClass]}>
  <!-- Skip to main content (accessibility) -->
  <a
    href="#main-content"
    class="skip-link"
  >
    Skip to main content
  </a>

  <!-- Header -->
  <Header />

  <!-- Main content -->
  <main id="main-content" class="flex-1">
    <slot />
  </main>

  <!-- Footer -->
  <Footer />

  <!-- Scripts slot -->
  <slot name="scripts" />
</body>
</html>